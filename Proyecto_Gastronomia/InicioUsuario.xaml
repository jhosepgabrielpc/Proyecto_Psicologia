<Window x:Class="Proyecto_Gastronomia.InicioUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Gastronomia"
        mc:Ignorable="d"
        Title="InicioUsuario" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="CanResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Imagenes/fondo_inicio_usuario.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.45*"/>
            <ColumnDefinition Width="0.55*"/>
        </Grid.ColumnDefinitions>

        <Button Content="&lt;&lt;&lt;"
                Grid.Column="1" 
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Style="{StaticResource TextButtonStyle}"
                Foreground="White"
                FontSize="30"
                FontWeight="Bold"
                Width="70" Height="40"
                Margin="10,0,0,0"
                Click="btnAtras_Click"/>

        <Button Content="X"
                Grid.Column="1" 
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Style="{StaticResource TextButtonStyle}"
                Foreground="White"
                FontSize="24"
                FontWeight="Bold"
                Width="40" Height="40"
                Margin="0,0,10,0"
                Click="btnSalir_Click"/>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="100,34,24,37" Width="400">

            <TextBlock Text="BIENVENIDO A TU"
                       Foreground="White"
                       FontSize="23"
                       FontWeight="Normal"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>
            <TextBlock Text="SITIO DE"
                       Foreground="White"
                       FontSize="27"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="BIENESTAR MENTAL"
                       Foreground="White"
                       FontSize="50"
                       FontWeight="ExtraBold"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,30"/>

            <Button x:Name="btnRecetas" Content="MI REGISTRO EMOCIONAL"
                    Style="{StaticResource MenuButtonStyle}"
                    Background="#5cb85c" Foreground="White"
                    Click="btnRecetas_Click"/>

            <Button x:Name="btnIngredientes" Content="RECURSOS (Próximamente)"
                    Style="{StaticResource MenuButtonStyle}"
                    Background="#f6eecc" Foreground="#333333"
                    BorderBrush="#333333" BorderThickness="1"
                    Click="btnIngredientes_Click"/>

            <Button x:Name="btnDepartamentos" Content="MIS CITAS"
                    Style="{StaticResource MenuButtonStyle}"
                    Background="#d9534f" Foreground="White"
                    Click="btnDepartamentos_Click"/>
        </StackPanel>
    </Grid>

    <Window.Resources>
        <Style x:Key="TextButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Foreground" Value="#AAAAAA"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>