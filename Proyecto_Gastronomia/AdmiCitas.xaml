<Window x:Class="Proyecto_Gastronomia.AdmiCitas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Gastronomia"
        mc:Ignorable="d"
        Title="Administrar Citas" Height="750" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="CanResize"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Imagenes/terapia.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#17A2B8" Padding="15"
                CornerRadius="10" Margin="0,0,0,524" Grid.RowSpan="2">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Width="60" Height="60"
                            Margin="10,0,0,0"
                            Click="btnAtras_Click" Style="{StaticResource TextButtonStyle}">
                        <Image Source="Imagenes/volver3.png" Stretch="Uniform"/>
                    </Button>

                    <TextBlock Grid.Column="1"
                               Text="GESTIÓN DE CITAS"
                               Foreground="White"
                               FontSize="55"
                               FontWeight="ExtraBold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0"/>

                    <Button Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Width="40" Height="40"
                            Margin="0,0,10,0"
                            Click="btnSalir_Click" Style="{StaticResource TextButtonStyle}">
                        <Image Source="Imagenes/salir3.png" Stretch="Uniform"/>
                    </Button>
                </Grid>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <TextBlock Text="Seleccione un Terapeuta para ver sus Citas:"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    <ComboBox x:Name="cmbTerapeutas"
                              Width="300" Height="52"
                              Style="{StaticResource InputComboBoxStyle}"
                              DisplayMemberPath="NombreCompleto"
                              SelectedValuePath="IdTerapeuta"
                              SelectionChanged="cmbTerapeutas_SelectionChanged"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0,20,20">
            <UniformGrid x:Name="CitasContainer" Columns="2"
                         HorizontalAlignment="Center" VerticalAlignment="Top"
                         SnapsToDevicePixels="True"
                         RenderOptions.ClearTypeHint="Enabled">
                <UniformGrid.Resources>
                    <Style TargetType="Border">
                        <Setter Property="Margin" Value="10,15,10,15"/>
                        <Setter Property="Width" Value="450"/>
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="CornerRadius" Value="15"/>
                        <Setter Property="Padding" Value="20"/>
                        <Setter Property="Effect" Value="{StaticResource RecipeCardShadowEffect}"/>
                    </Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="TextWrapping" Value="Wrap"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Margin" Value="0,0,0,5"/>
                    </Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Margin" Value="0,0,0,10"/>
                    </Style>
                </UniformGrid.Resources>
            </UniformGrid>
        </ScrollViewer>
    </Grid>
</Window>