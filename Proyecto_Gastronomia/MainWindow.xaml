<Window x:Class="Proyecto_Gastronomia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Gastronomia"
        mc:Ignorable="d"
        Title="Bienvenido" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="CanResize">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Imagenes/fondo_index.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                CornerRadius="20"
                Background="#F5F5DC" Opacity="0.80"
                Padding="60,30">
            <!-- Ajustado el padding para dar espacio alrededor del contenido -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Línea decorativa superior -->
                <Rectangle Height="2" Width="200" Fill="#D1C3AD" Margin="0,0,0,20"/>

                <!-- Texto "BIENVENIDO A" -->
                <TextBlock Text="BIENVENIDO A"
                           Foreground="#3B3B1A"
                           FontSize="48"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           FontFamily="Georgia"
                           Margin="0,0,0,20"/>

                <!-- Logo -->
                <Image Source="/Imagenes/logo.png"
                       Width="300" Height="300"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,50"/>

                <!-- Botón "INGRESAR" -->
                <Button Content="INGRESAR"
                        Style="{StaticResource IngresarButtonStyle}"
                        Click="btnIngresar_Click"/>

                <!-- Línea decorativa inferior -->
                <Rectangle Height="2" Width="200" Fill="#D1C3AD" Margin="0,20,0,0"/>

            </StackPanel>
        </Border>
    </Grid>

    <Window.Resources>
        <!-- Estilo para el botón "INGRESAR" para que parezca texto -->
        <Style x:Key="IngresarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#3B3B1A"/>
            <!-- Color del texto del botón -->
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontFamily" Value="Georgia"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#6A7A40"/>
                                <!-- Ligeramente más claro al pasar el ratón -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Foreground" Value="#809050"/>
                                <!-- Otro color al presionar -->
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>
