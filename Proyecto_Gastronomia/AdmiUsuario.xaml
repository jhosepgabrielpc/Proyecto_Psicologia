<Window x:Class="Proyecto_Gastronomia.AdmiUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Gastronomia"
        mc:Ignorable="d"
        Title="Administrar Usuarios"
        Height="750" Width="1000" 
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI"
        FontSize="16"
        Background="#FF1E1E1E"
        WindowStyle="None" ResizeMode="CanResize">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Imagenes/fondo_login.jpg" Stretch="Fill" />
        </Grid.Background>

        <!-- Botón de Atrás (Texto: <<<) - Posicionado en la esquina superior izquierda -->
        <Button Content="&lt;&lt;&lt;"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Style="{StaticResource TextButtonStyle}"
                Foreground="White"
                FontSize="24"
                FontWeight="Bold"
                Width="60" Height="40"
                Margin="10,10,0,0"
                Click="btnAtras_Click"
                Panel.ZIndex="1"/>

        <!-- Botón de Salir (Texto: X) - Posicionado en la esquina superior derecha -->
        <Button Content="X"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Style="{StaticResource TextButtonStyle}"
                Foreground="White"
                FontSize="24"
                FontWeight="Bold"
                Width="40" Height="40"
                Margin="0,10,10,0"
                Click="btnSalir_Click"
                Panel.ZIndex="1"/>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <!-- Fila para los botones de acción -->
                <RowDefinition Height="*"/>
                <!-- DataGrid de usuarios -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Encabezado -->
            <Grid Grid.Row="0" 
                  Grid.ColumnSpan="2" 
                  Margin="0 0 0 20"
                  Background="#AA1C1C1C">
                <TextBlock Text="Administrar Usuarios"
                           FontSize="40" 
                           FontWeight="Bold"
                           Foreground="#e7efc7"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- ID de Usuario (Solo para visualización al editar, no se edita directamente) -->
            <Label Content="ID Usuario:" Background="Gray" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0 0 10 5" Foreground="White"/>
            <TextBox x:Name="txtIdUsr"
                     Grid.Row="1" Grid.Column="1"
                     Margin="0 0 0 5"
                     Padding="8"
                     FontSize="16"
                     Background="#F9F9F9"
                     Opacity="0.92"
                     IsReadOnly="True"
                     BorderThickness="1"
                     BorderBrush="Gray"/>

            <!-- Nombre de Usuario -->
            <Label Content="Usuario:" Background="Gray" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0 0 10 5" Foreground="White"/>
            <TextBox x:Name="txtNomUsr"
                     Grid.Row="2" Grid.Column="1"
                     Margin="0 0 0 5"
                     Padding="8"
                     FontSize="16"
                     Background="#F9F9F9"
                     Opacity="0.92"
                     BorderThickness="1"
                     BorderBrush="Gray"/>

            <!-- Correo Electrónico -->
            <Label Background="Gray" Content="Correo Electrónico:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0 0 10 5" Foreground="White"/>
            <TextBox x:Name="txtCorreoUsr"
                     Grid.Row="3" Grid.Column="1"
                     Margin="0 0 0 5"
                     Padding="8"
                     FontSize="16"
                     Background="#F9F9F9"
                     Opacity="0.92"
                     BorderThickness="1"
                     BorderBrush="Gray"/>

            <!-- Número de Celular -->
            <Label Background="Gray" Content="Número de Celular:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0 0 10 5" Foreground="White"/>
            <TextBox x:Name="txtNCelUsr"
                     Grid.Row="4" Grid.Column="1"
                     Margin="0 0 0 5"
                     Padding="8"
                     FontSize="16"
                     Background="#F9F9F9"
                     Opacity="0.92"
                     BorderThickness="1"
                     BorderBrush="Gray"
                     InputScope="Number"/>

            <!-- Contraseña (Visible para administradores) -->
            <Label Background="Gray" Content="Contraseña:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0 0 10 5" Foreground="White"/>
            <TextBox x:Name="txtPassWdUsr"
                     Grid.Row="5" Grid.Column="1"
                     Margin="0 0 0 5"
                     Padding="8"
                     FontSize="16"
                     Background="#F9F9F9"
                     Opacity="0.92"
                     BorderThickness="1"
                     BorderBrush="Gray"/>

            <!-- Estado (Activo/Inactivo) -->
            <Label Background="Gray" Content="Estado:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="0 0 10 5" Foreground="White"/>
            <CheckBox x:Name="chkEstado"
                      Grid.Row="6" Grid.Column="1"
                      VerticalAlignment="Center"
                      Margin="0,0,0,5"
                      Foreground="White"
                      Content="Activo"/>

            <!-- StackPanel de Botones de acción -->
            <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20">
                <Button Content="Nuevo" Width="130" Height="40" Margin="10"
                        Background="#17A2B8" Foreground="White" FontWeight="SemiBold"
                        BorderThickness="0" Cursor="Hand"
                        Click="Nuevo_Click"/>
                <!-- Botón "Agregar" ELIMINADO -->
                <Button Content="Editar" Width="130" Height="40" Margin="10"
                        Background="#ffc107" Foreground="Black" FontWeight="SemiBold"
                        BorderThickness="0" Cursor="Hand"
                        Click="Editar_Click"/>
                <Button Content="Eliminar" Width="130" Height="40" Margin="10"
                        Background="#dc3545" Foreground="White" FontWeight="SemiBold"
                        BorderThickness="0" Cursor="Hand"
                        Click="Eliminar_Click"/>
            </StackPanel>

            <!-- DataGrid de Usuarios -->
            <DataGrid x:Name="dgUsuarios"
                      Grid.Row="8" Grid.ColumnSpan="2" Margin="0 20 0 0"
                      AutoGenerateColumns="False"
                      SelectionMode="Single"
                      SelectionChanged="DgUsuarios_SelectionChanged"
                      Background="White"
                      RowBackground="#fdfdfd"
                      AlternatingRowBackground="#f0f0f0"
                      FontSize="16"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      Opacity="0.95"
                      BorderBrush="#ddd"
                      BorderThickness="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding IdUsr}" Width="60" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Usuario" Binding="{Binding NomUsr}" Width="*"/>
                    <DataGridTextColumn Header="Correo" Binding="{Binding CorreoUsr}" Width="2*"/>
                    <DataGridTextColumn Header="Celular" Binding="{Binding NCelUsr}" Width="*"/>
                    <DataGridTextColumn Header="Contraseña" Binding="{Binding PassWdUsr}" Width="2*"/>
                    <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Estado}" Width="Auto" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
