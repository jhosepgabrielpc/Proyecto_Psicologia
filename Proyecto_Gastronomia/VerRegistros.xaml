<Window x:Class="Proyecto_Gastronomia.VerRegistros"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Gastronomia"
        mc:Ignorable="d"
        Title="Ver Registros Emocionales" Height="750" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="CanResize"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Imagenes/fondo_recetas.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#007bff" Padding="15" Margin="0,20,0,10"
                CornerRadius="10">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Width="60" Height="60" Margin="10,0,0,0"
                            Click="btnAtras_Click" Style="{StaticResource TextButtonStyle}">
                        <Image Source="Imagenes/volver.png" Stretch="Uniform"/>
                    </Button>

                    <TextBlock Grid.Column="1"
                               Text="MIS REGISTROS"
                               FontSize="55"
                               Foreground="White"
                               FontWeight="ExtraBold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0"/>

                    <Button Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Width="40" Height="40" Margin="0,0,10,0"
                            Click="btnSalir_Click" Style="{StaticResource TextButtonStyle}">
                        <Image Source="Imagenes/salir.png" Stretch="Uniform"/>
                    </Button>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">

                    <Grid Margin="0,0,20,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Emoción:" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbEmociones" Grid.Row="1" Width="180" Height="30"
                                  Style="{StaticResource InputComboBoxStyle}"
                                  DisplayMemberPath="nombre"
                                  SelectedValuePath="id_emocion"/>
                    </Grid>

                    <Grid Margin="0,0,20,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Desde:" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                        <DatePicker x:Name="dpFechaDesde" Grid.Row="1" Width="150" Height="30"
                                    Style="{StaticResource {x:Type DatePicker}}"/>
                    </Grid>

                    <Grid Margin="0,0,20,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Hasta:" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                        <DatePicker x:Name="dpFechaHasta" Grid.Row="1" Width="150" Height="30"
                                    Style="{StaticResource {x:Type DatePicker}}"/>
                    </Grid>

                    <Button Content="Buscar" Width="80" Height="35" Margin="10,20,0,0"
                            Background="#D1C3AD" Foreground="#3B3B1A" FontWeight="SemiBold"
                            BorderThickness="0" Cursor="Hand"
                            Click="btnBuscar_Click"
                            Style="{StaticResource LoginButtonStyle}"/>

                    <Button Content="Limpiar" Width="80" Height="35" Margin="10,20,0,0"
                            Background="#AEC8A4" Foreground="#3B3B1A" FontWeight="SemiBold"
                            BorderThickness="0" Cursor="Hand"
                            Click="btnLimpiarBusqueda_Click"
                            Style="{StaticResource LoginButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0,20,20">
            <UniformGrid x:Name="RegistrosContainer" Columns="2"
                         HorizontalAlignment="Center" VerticalAlignment="Top"
                         SnapsToDevicePixels="True"
                         RenderOptions.ClearTypeHint="Enabled">
            </UniformGrid>
        </ScrollViewer>
    </Grid>
</Window>