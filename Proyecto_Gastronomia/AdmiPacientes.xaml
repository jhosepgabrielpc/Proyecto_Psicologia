<Window x:Class="Proyecto_Gastronomia.AdmiPacientes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Gastronomia"
        mc:Ignorable="d"
        Title="Administrar Pacientes"
        Height="750" Width="1000"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI"
        FontSize="16"
        Background="#FF1E1E1E"
        WindowStyle="None" ResizeMode="CanResize">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/Imagenes/fondo_pacientes.png" Stretch="Fill" />
            </Grid.Background>

            <Button Content="&lt;&lt;&lt;"
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    Style="{StaticResource TextButtonStyle}"
                    Foreground="White"
                    FontSize="24"
                    FontWeight="Bold"
                    Width="60" Height="40"
                    Margin="10,10,0,0"
                    Click="btnAtras_Click"
                    Panel.ZIndex="1"/>

            <Button Content="X"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Style="{StaticResource TextButtonStyle}"
                    Foreground="White"
                    FontSize="24"
                    FontWeight="Bold"
                    Width="40" Height="40"
                    Margin="0,10,10,0"
                    Click="btnSalir_Click"
                    Panel.ZIndex="1"/>

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0"
                      Grid.ColumnSpan="2"
                      Margin="0 0 0 20"
                      Background="#AA1C1C1C">
                    <TextBlock Text="Administrar Pacientes"
                               FontSize="40"
                               FontWeight="Bold"
                               Foreground="#e7efc7"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>

                <Label Content="ID Paciente:" Background="Gray" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0 0 10 5" Foreground="White"/>
                <TextBox x:Name="txtIdPaciente"
                         Grid.Row="1" Grid.Column="1"
                         Margin="0 0 0 5"
                         Padding="8"
                         FontSize="16"
                         Background="#F9F9F9"
                         Opacity="0.92"
                         IsReadOnly="True"
                         BorderThickness="1"
                         BorderBrush="Gray"/>

                <Label Content="Nombre:" Background="Gray" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0 0 10 5" Foreground="White"/>
                <TextBox x:Name="txtNombre"
                         Grid.Row="2" Grid.Column="1"
                         Margin="0 0 0 5"
                         Padding="8"
                         FontSize="16"
                         Background="#F9F9F9"
                         Opacity="0.92"
                         IsReadOnly="True"
                         BorderThickness="1"
                         BorderBrush="Gray"/>

                <Label Background="Gray" Content="Apellido:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0 0 10 5" Foreground="White"/>
                <TextBox x:Name="txtApellido"
                         Grid.Row="3" Grid.Column="1"
                         Margin="0 0 0 5"
                         Padding="8"
                         FontSize="16"
                         IsReadOnly="True"
                         Background="#F9F9F9"
                         Opacity="0.92"
                         BorderThickness="1"
                         BorderBrush="Gray"/>

                <Label Background="Gray" Content="Correo:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0 0 10 5" Foreground="White"/>
                <TextBox x:Name="txtCorreo"
                         Grid.Row="4" Grid.Column="1"
                         Margin="0 0 0 5"
                         Padding="8"
                         FontSize="16"
                         IsReadOnly="True"
                         Background="#F9F9F9"
                         Opacity="0.92"
                         BorderThickness="1"
                         BorderBrush="Gray"/>

                <Label Background="Gray" Content="Terapeuta:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0 0 10 5" Foreground="White"/>
                <ComboBox x:Name="cmbTerapeutas"
                          Grid.Row="5" Grid.Column="1"
                          Margin="0 0 0 5"
                          Padding="8"
                          FontSize="16"
                          IsEnabled="False"
                          Background="#F9F9F9"
                          Opacity="0.92"
                          BorderThickness="1"
                          BorderBrush="Gray"
                          DisplayMemberPath="NombreCompleto"
                          SelectedValuePath="IdTerapeuta"
                          Style="{StaticResource InputComboBoxStyle}"/>

                <Label Background="Gray" Content="Estado Usuario:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="0 0 10 5" Foreground="White"/>
                <CheckBox x:Name="chkEstadoUsuario"
                          Grid.Row="6" Grid.Column="1"
                          VerticalAlignment="Center"
                          Margin="0,0,0,5"
                          IsEnabled="False"
                          Foreground="White"
                          Content="Activo"/>

                <Label Background="Gray" Content="Estado Tratamiento:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Margin="0 0 10 5" Foreground="White"/>
                <TextBox x:Name="txtEstadoTratamiento"
                         Grid.Row="7" Grid.Column="1"
                         Margin="0 0 0 5"
                         Padding="8"
                         FontSize="16"
                         IsReadOnly="True"
                         Background="#F9F9F9"
                         Opacity="0.92"
                         BorderThickness="1"
                         BorderBrush="Gray"/>

                <Label Background="Gray" Content="Historial Clínico:" Grid.Row="8" Grid.Column="0" VerticalAlignment="Top" Margin="0 0 10 5" Foreground="White"/>
                <TextBox x:Name="txtHistorialClinico"
                         Grid.Row="8" Grid.Column="1"
                         Height="100"
                         Margin="0 0 0 10"
                         Padding="8"
                         IsReadOnly="True"
                         FontSize="16"
                         Background="#F9F9F9"
                         Opacity="0.92"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         BorderThickness="1"
                         BorderBrush="Gray"/>

                <StackPanel Grid.Row="9" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10">
                    <Button Content="Nuevo" Width="130" Height="40" Margin="10"
                            Background="#17A2B8" Foreground="White" FontWeight="SemiBold"
                            BorderThickness="0" Cursor="Hand"
                            Click="btnNuevo_Click"/>
                    <Button Content="Editar" Width="130" Height="40" Margin="10"
                            Background="#ffc107" Foreground="Black" FontWeight="SemiBold"
                            BorderThickness="0" Cursor="Hand"
                            Click="btnEditar_Click"/>
                    <Button Content="Desactivar" Width="130" Height="40" Margin="10"
                            Background="#dc3545" Foreground="White" FontWeight="SemiBold"
                            BorderThickness="0" Cursor="Hand"
                            Click="btnEliminar_Click"/>
                </StackPanel>

                <DataGrid x:Name="dgPacientes"
                          Grid.Row="10" Grid.ColumnSpan="2" Margin="0 20 0 0"
                          AutoGenerateColumns="False"
                          SelectionMode="Single"
                          SelectionChanged="DgPacientes_SelectionChanged"
                          Background="White"
                          RowBackground="#fdfdfd"
                          AlternatingRowBackground="#f0f0f0"
                          FontSize="16"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Opacity="0.95"
                          BorderBrush="#ddd"
                          BorderThickness="1"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding IdPaciente}" Width="40"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="120"/>
                        <DataGridTextColumn Header="Apellido" Binding="{Binding Apellido}" Width="120"/>
                        <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="150"/>
                        <DataGridTextColumn Header="Terapeuta" Binding="{Binding NombreTerapeuta}" Width="150"/>
                        <DataGridTextColumn Header="Estado Trat." Binding="{Binding EstadoTratamiento}" Width="120"/>
                        <DataGridCheckBoxColumn Header="Activo" Binding="{Binding EstadoUsuario}" Width="60"/>
                        <DataGridTextColumn Header="Historial" Binding="{Binding HistorialClinico}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>