<!-- Animaciones locales para esta landing -->
<script>
    (function () {
        const style = document.createElement('style');
        style.innerHTML = `
            @keyframes landing-fade-in {
                from { opacity: 0; transform: translateY(12px); }
                to   { opacity: 1; transform: translateY(0); }
            }
            @keyframes landing-slide-up {
                from { opacity: 0; transform: translateY(20px) scale(0.97); }
                to   { opacity: 1; transform: translateY(0) scale(1); }
            }
            @keyframes ping-once {
                0% { transform: scale(0.9); opacity: 0.8; }
                70% { transform: scale(1.5); opacity: 0; }
                100% { transform: scale(1.5); opacity: 0; }
            }
            .animate-landing-fade-in { animation: landing-fade-in 0.6s ease-out; }
            .animate-landing-slide-up { animation: landing-slide-up 0.7s ease-out; }
            .animate-ping-once { animation: ping-once 1.2s ease-out infinite; }
        `;
        document.head.appendChild(style);
    })();
</script>

