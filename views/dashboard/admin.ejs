<%- include('../partials/header', { title: 'Centro de Comando MindCare' }) %>

<div class="min-h-screen bg-slate-50 py-10 font-sans">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <div class="mb-10 flex flex-col md:flex-row justify-between items-start md:items-center border-b border-gray-200 pb-6">
            <div>
                <h1 class="text-4xl font-extrabold tracking-tight text-transparent bg-clip-text bg-gradient-to-r from-slate-800 to-slate-600">
                    Torre de Control <span class="text-purple-600">MindCare</span>
                </h1>
                <p class="mt-2 text-lg text-slate-500 flex items-center">
                    Bienvenido, <span class="font-bold text-slate-700 mx-1"><%= user.nombre %></span>.
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800 ml-2">
                        Administrador
                    </span>
                </p>
            </div>
            <div class="mt-4 md:mt-0">
                <div class="inline-flex items-center px-4 py-2 rounded-xl bg-white shadow-sm border border-slate-200 text-slate-500 text-sm font-medium">
                    <i class="far fa-calendar-alt mr-2 text-purple-500"></i>
                    <%= new Date().toLocaleDateString('es-ES', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
                </div>
            </div>
        </div>

        <% if (locals.msg) { %>
            <div class="mb-8 rounded-xl p-4 shadow-lg border-l-4 transition-all duration-300 hover:scale-[1.01]
                <%= (msg.includes('error') || msg.includes('protected')) ? 'bg-rose-50 border-rose-500' : 'bg-emerald-50 border-emerald-500' %>">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas <%= (msg.includes('error') || msg.includes('protected')) ? 'fa-exclamation-triangle text-rose-500' : 'fa-check-circle text-emerald-500' %> text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-sm font-bold <%= (msg.includes('error') || msg.includes('protected')) ? 'text-rose-800' : 'text-emerald-800' %>">
                            <% if (msg === 'created') { %> ¡Usuario Registrado!
                            <% } else if (msg === 'assigned') { %> ¡Asignación Exitosa!
                            <% } else if (msg === 'updated') { %> ¡Datos Actualizados!
                            <% } else if (msg === 'status_changed') { %> Estado Modificado
                            <% } else if (msg === 'admin_protected') { %> ACCIÓN DENEGADA
                            <% } else { %> Error del Sistema <% } %>
                        </h3>
                        <p class="text-sm mt-1 <%= (msg.includes('error') || msg.includes('protected')) ? 'text-rose-700' : 'text-emerald-700' %>">
                            <% if (msg === 'assigned') { %> El paciente ha sido vinculado con su terapeuta correctamente.
                            <% } else if (msg === 'admin_protected') { %> Por seguridad, no puedes bloquear o eliminar al Administrador Principal.
                            <% } else { %> La operación se ha completado en la base de datos. <% } %>
                        </p>
                    </div>
                </div>
            </div>
        <% } %>

        <% if (locals.alerts && alerts.length > 0) { %>
            <div class="mb-10 bg-white rounded-2xl shadow-xl border border-rose-100 overflow-hidden animate-pulse-slow">
                <div class="bg-rose-600 px-6 py-4 flex justify-between items-center">
                    <h2 class="text-white font-bold text-lg flex items-center">
                        <span class="relative flex h-3 w-3 mr-3">
                          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-rose-200 opacity-75"></span>
                          <span class="relative inline-flex rounded-full h-3 w-3 bg-white"></span>
                        </span>
                        ALERTA DE RIESGO CLÍNICO
                    </h2>
                    <span class="bg-rose-800 text-white px-3 py-1 rounded-full text-xs font-bold shadow-sm">
                        <%= alerts.length %> Casos Activos
                    </span>
                </div>
                <div class="p-6 bg-rose-50">
                    <div class="grid gap-4">
                        <% alerts.forEach(function(alert) { %>
                            <div class="flex items-start p-4 bg-white rounded-xl border-l-4 border-rose-500 shadow-sm hover:shadow-md transition">
                                <div class="flex-shrink-0 text-rose-500 mt-1">
                                    <i class="fas fa-heart-broken text-2xl"></i>
                                </div>
                                <div class="ml-4 flex-1">
                                    <div class="flex justify-between items-center">
                                        <h3 class="text-lg font-bold text-gray-900"><%= alert.nombre %> <%= alert.apellido %></h3>
                                        <span class="text-xs font-mono text-gray-500 bg-gray-100 px-2 py-1 rounded"><%= new Date(alert.fecha_hora).toLocaleString() %></span>
                                    </div>
                                    <p class="text-sm text-rose-700 font-bold mt-1 uppercase tracking-wide">
                                        <%= alert.emocion_principal %> (Nivel <%= alert.valencia %>/5)
                                    </p>
                                    <p class="text-sm text-gray-600 mt-2 italic border-l-2 border-gray-200 pl-3">"<%= alert.notas %>"</p>
                                </div>
                                <button class="ml-4 px-4 py-2 bg-rose-600 text-white text-sm font-bold rounded-lg hover:bg-rose-700 transition shadow-md">
                                    Intervenir
                                </button>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        <% } %>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 group">
                <div class="flex justify-between items-start">
                    <div>
                        <p class="text-xs font-bold tracking-wider text-slate-400 uppercase">Usuarios</p>
                        <h3 class="text-4xl font-extrabold text-slate-800 mt-2"><%= stats.total_usuarios %></h3>
                    </div>
                    <div class="p-3 rounded-xl bg-blue-50 text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-colors">
                        <i class="fas fa-users text-2xl"></i>
                    </div>
                </div>
                <div class="mt-4 h-1.5 w-full bg-slate-100 rounded-full overflow-hidden"><div class="h-full bg-blue-500 w-full rounded-full"></div></div>
            </div>
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 group">
                <div class="flex justify-between items-start">
                    <div>
                        <p class="text-xs font-bold tracking-wider text-slate-400 uppercase">Pacientes</p>
                        <h3 class="text-4xl font-extrabold text-slate-800 mt-2"><%= stats.total_pacientes %></h3>
                    </div>
                    <div class="p-3 rounded-xl bg-emerald-50 text-emerald-600 group-hover:bg-emerald-600 group-hover:text-white transition-colors">
                        <i class="fas fa-user-injured text-2xl"></i>
                    </div>
                </div>
                <div class="mt-4 h-1.5 w-full bg-slate-100 rounded-full overflow-hidden"><div class="h-full bg-emerald-500 w-3/4 rounded-full"></div></div>
            </div>
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 group">
                <div class="flex justify-between items-start">
                    <div>
                        <p class="text-xs font-bold tracking-wider text-slate-400 uppercase">Terapeutas</p>
                        <h3 class="text-4xl font-extrabold text-slate-800 mt-2"><%= stats.total_terapeutas %></h3>
                    </div>
                    <div class="p-3 rounded-xl bg-purple-50 text-purple-600 group-hover:bg-purple-600 group-hover:text-white transition-colors">
                        <i class="fas fa-user-md text-2xl"></i>
                    </div>
                </div>
                <div class="mt-4 h-1.5 w-full bg-slate-100 rounded-full overflow-hidden"><div class="h-full bg-purple-500 w-1/2 rounded-full"></div></div>
            </div>
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-slate-100 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 group">
                <div class="flex justify-between items-start">
                    <div>
                        <p class="text-xs font-bold tracking-wider text-slate-400 uppercase">Citas Pendientes</p>
                        <h3 class="text-4xl font-extrabold text-slate-800 mt-2"><%= stats.citas_pendientes %></h3>
                    </div>
                    <div class="p-3 rounded-xl bg-amber-50 text-amber-600 group-hover:bg-amber-500 group-hover:text-white transition-colors">
                        <i class="fas fa-calendar-check text-2xl"></i>
                    </div>
                </div>
                <div class="mt-4 h-1.5 w-full bg-slate-100 rounded-full overflow-hidden"><div class="h-full bg-amber-500 w-1/4 rounded-full"></div></div>
            </div>
        </div>

        <% if (locals.unassignedPatients && unassignedPatients.length > 0) { %>
        <div class="mb-10 bg-white rounded-2xl shadow-lg border border-orange-100 overflow-hidden">
            <div class="px-8 py-5 bg-gradient-to-r from-orange-500 to-orange-600 flex justify-between items-center">
                <div>
                    <h2 class="text-lg font-bold text-white flex items-center">
                        <i class="fas fa-link mr-2"></i> Matchmaking Clínico
                    </h2>
                    <p class="text-xs text-orange-100">Pacientes nuevos esperando asignación de terapeuta</p>
                </div>
                <span class="bg-white text-orange-600 px-3 py-1 rounded-lg text-xs font-bold shadow-sm">
                    <%= unassignedPatients.length %> Pendientes
                </span>
            </div>
            <div class="p-6 bg-orange-50">
                <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
                    <% unassignedPatients.forEach(function(p) { %>
                        <div class="bg-white p-5 rounded-xl border border-orange-200 shadow-sm hover:shadow-lg transition-all">
                            <div class="flex items-center mb-4">
                                <div class="h-12 w-12 rounded-full bg-orange-100 flex items-center justify-center text-orange-600 font-bold text-lg border border-orange-200">
                                    <%= p.nombre.charAt(0) %>
                                </div>
                                <div class="ml-3 overflow-hidden">
                                    <h4 class="text-sm font-bold text-gray-900 truncate"><%= p.nombre %> <%= p.apellido %></h4>
                                    <p class="text-xs text-gray-500 truncate"><%= p.email %></p>
                                </div>
                            </div>
                            
                            <form action="/dashboard/admin/assign" method="POST" class="mt-2">
                                <input type="hidden" name="id_paciente" value="<%= p.id_paciente %>">
                                <div class="space-y-2">
                                    <label class="text-xs font-bold text-gray-500 uppercase">Asignar a:</label>
                                    <div class="flex gap-2">
                                        <select name="id_terapeuta" required class="block w-full rounded-lg border-gray-300 text-xs shadow-sm focus:border-orange-500 focus:ring-orange-500 py-2">
                                            <option value="" disabled selected>Seleccionar...</option>
                                            <% therapists.forEach(function(t) { %>
                                                <option value="<%= t.id_terapeuta %>">
                                                    <%= t.nombre %> <%= t.apellido %>
                                                </option>
                                            <% }); %>
                                        </select>
                                        <button type="submit" class="bg-orange-600 text-white px-3 py-1 rounded-lg text-xs font-bold hover:bg-orange-700 transition shadow-md">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
        <% } %>

        <div class="bg-white rounded-2xl shadow-lg border border-slate-100 overflow-hidden">
            <div class="px-8 py-6 border-b border-slate-100 flex justify-between items-center bg-white">
                <div>
                    <h2 class="text-xl font-bold text-slate-800">Gestión de Usuarios</h2>
                    <p class="text-sm text-slate-500 mt-1">Base de datos completa del sistema</p>
                </div>
                <a href="/dashboard/admin/create" class="group inline-flex items-center justify-center px-6 py-3 text-sm font-bold text-white transition-all duration-200 bg-purple-600 rounded-xl hover:bg-purple-700 shadow-md hover:shadow-lg transform hover:-translate-y-0.5">
                    <i class="fas fa-plus mr-2 transition-transform group-hover:rotate-90"></i>
                    Nuevo Usuario
                </a>
            </div>
            
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-100">
                    <thead class="bg-slate-50">
                        <tr>
                            <th class="px-8 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Usuario</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Rol</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Estado</th>
                            <th class="px-8 py-4 text-right text-xs font-bold text-slate-500 uppercase tracking-wider">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-slate-100">
                        <% users.forEach(function(u) { %>
                        <tr class="group hover:bg-slate-50 transition-colors duration-200 <%= !u.estado ? 'bg-slate-50/80' : '' %>">
                            
                            <td class="px-8 py-5 whitespace-nowrap <%= !u.estado ? 'opacity-50 grayscale' : '' %>">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-12 w-12">
                                        <div class="h-12 w-12 rounded-xl bg-gradient-to-br from-slate-100 to-slate-200 flex items-center justify-center text-slate-600 font-bold text-xl border border-slate-200 shadow-sm">
                                            <%= u.nombre.charAt(0).toUpperCase() %>
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-bold text-slate-900"><%= u.nombre %> <%= u.apellido %></div>
                                        <div class="text-xs text-slate-500 flex items-center mt-1">
                                            <i class="far fa-envelope mr-1.5"></i> <%= u.email %>
                                        </div>
                                    </div>
                                </div>
                            </td>

                            <td class="px-6 py-5 whitespace-nowrap <%= !u.estado ? 'opacity-50 grayscale' : '' %>">
                                <% 
                                    let roleStyle = 'bg-slate-100 text-slate-700 border-slate-200';
                                    let roleIcon = 'fa-user';
                                    if (u.nombre_rol.includes('Admin')) { 
                                        roleStyle = 'bg-rose-50 text-rose-700 border-rose-200'; 
                                        roleIcon = 'fa-shield-alt';
                                    } else if (u.nombre_rol === 'Terapeuta') { 
                                        roleStyle = 'bg-violet-50 text-violet-700 border-violet-200';
                                        roleIcon = 'fa-user-md';
                                    } else if (u.nombre_rol === 'Paciente') {
                                        roleStyle = 'bg-sky-50 text-sky-700 border-sky-200';
                                        roleIcon = 'fa-user-injured';
                                    }
                                %>
                                <span class="px-3 py-1.5 inline-flex items-center text-xs font-bold rounded-lg border <%= roleStyle %>">
                                    <i class="fas <%= roleIcon %> mr-1.5"></i> <%= u.nombre_rol %>
                                </span>
                            </td>

                            <td class="px-6 py-5 whitespace-nowrap">
                                <% if (u.estado) { %>
                                    <span class="px-3 py-1.5 inline-flex text-xs font-bold rounded-full bg-emerald-100 text-emerald-700 border border-emerald-200">
                                        <span class="w-1.5 h-1.5 bg-emerald-500 rounded-full mr-2 animate-pulse"></span> Activo
                                    </span>
                                <% } else { %>
                                    <span class="px-3 py-1.5 inline-flex text-xs font-bold rounded-full bg-slate-200 text-slate-600 border border-slate-300">
                                        <i class="fas fa-ban mr-1.5"></i> Bloqueado
                                    </span>
                                <% } %>
                            </td>

                            <td class="px-8 py-5 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex justify-end space-x-2 opacity-80 group-hover:opacity-100 transition-opacity">
                                    
                                    <% if (u.nombre_rol.includes('Admin') || u.nombre_rol === 'Administrador') { %>
                                        <span class="p-2 rounded-lg bg-slate-100 text-slate-300 cursor-not-allowed border border-slate-200" title="Protegido">
                                            <i class="fas fa-lock"></i>
                                        </span>
                                    <% } else { %>
                                        <a href="/dashboard/admin/toggle-user/<%= u.id_usuario %>" 
                                           class="p-2 rounded-lg border transition-all duration-200 shadow-sm <%= u.estado ? 'bg-white text-rose-500 hover:bg-rose-50 hover:border-rose-300' : 'bg-emerald-50 text-emerald-600 border-emerald-200 hover:bg-emerald-100' %>"
                                           title="<%= u.estado ? 'Bloquear Acceso' : 'Reactivar Acceso' %>">
                                            <i class="fas <%= u.estado ? 'fa-ban' : 'fa-undo' %>"></i>
                                        </a>
                                    <% } %>
                                    
                                    <a href="/dashboard/admin/edit/<%= u.id_usuario %>" 
                                       class="p-2 rounded-lg bg-white border border-slate-200 text-blue-600 hover:bg-blue-50 hover:border-blue-300 hover:text-blue-700 shadow-sm transition-all duration-200"
                                       title="Editar Detalles">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
            <div class="bg-slate-50 px-8 py-4 border-t border-slate-200 text-center">
                <p class="text-xs text-slate-400">Mostrando registros recientes.</p>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>