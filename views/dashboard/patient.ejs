<%- include('../partials/header', { title: 'Mi Espacio - MindCare' }) %>

<div class="min-h-screen bg-slate-50 py-8 font-sans">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <div class="mb-8 animate-fade-in-down">
            <h1 class="text-3xl font-extrabold text-slate-900">Hola, <span class="text-indigo-600"><%= user.nombre %></span> </h1>
            <p class="text-slate-500 mt-2 text-lg">Bienvenido a tu espacio personal de bienestar.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <a href="/dashboard/monitoring" class="group bg-white rounded-2xl shadow-sm p-6 border-l-4 border-indigo-500 hover:shadow-lg transition-all transform hover:-translate-y-1">
                <div class="flex items-center">
                    <div class="bg-indigo-50 p-3 rounded-xl group-hover:bg-indigo-600 group-hover:text-white transition-colors text-indigo-600">
                        <i class="fas fa-heart-pulse text-2xl"></i>
                    </div>
                    <div class="ml-4">
                        <h3 class="font-bold text-slate-800 text-lg">Monitoreo</h3>
                        <p class="text-sm text-slate-500">Registra c贸mo te sientes hoy</p>
                    </div>
                </div>
            </a>

            <div class="group bg-white rounded-2xl shadow-sm p-6 border-l-4 border-emerald-500 hover:shadow-lg transition-all transform hover:-translate-y-1 cursor-default">
                <div class="flex items-center">
                    <div class="bg-emerald-50 p-3 rounded-xl text-emerald-600">
                        <i class="fas fa-calendar-check text-2xl"></i>
                    </div>
                    <div class="ml-4">
                        <h3 class="font-bold text-slate-800 text-lg">Mis Citas</h3>
                        <p class="text-sm text-slate-500">Agenda y sesiones</p>
                    </div>
                </div>
            </div>

            <a href="/dashboard/communication" class="group bg-white rounded-2xl shadow-sm p-6 border-l-4 border-violet-500 hover:shadow-lg transition-all transform hover:-translate-y-1">
                <div class="flex items-center">
                    <div class="bg-violet-50 p-3 rounded-xl group-hover:bg-violet-600 group-hover:text-white transition-colors text-violet-600">
                        <i class="fas fa-comments text-2xl"></i>
                    </div>
                    <div class="ml-4">
                        <h3 class="font-bold text-slate-800 text-lg">Mensajes</h3>
                        <p class="text-sm text-slate-500">Habla con tu terapeuta</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            
            <div class="space-y-8">
                <div class="bg-white rounded-2xl shadow-sm p-6 border border-slate-100 relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-24 h-24 bg-indigo-50 rounded-full -mr-8 -mt-8 z-0"></div>
                    <h2 class="text-xl font-bold text-slate-800 mb-4 flex items-center relative z-10">
                        <i class="fas fa-chart-line mr-2 text-indigo-500"></i> Tu Progreso Semanal
                    </h2>
                    
                    <div class="bg-slate-50 rounded-xl p-8 text-center border-2 border-dashed border-slate-200 relative z-10 hover:bg-indigo-50/30 transition-colors">
                        <i class="fas fa-chart-area text-4xl text-slate-300 mb-3"></i>
                        <p class="text-slate-500 font-medium">Visualiza tu evoluci贸n detallada</p>
                        <a href="/dashboard/monitoring" class="mt-4 inline-block text-indigo-600 font-bold hover:text-indigo-800 text-sm bg-white px-4 py-2 rounded-lg shadow-sm border border-slate-200 hover:shadow-md transition-all">
                            Ver Reporte Completo &rarr;
                        </a>
                    </div>
                </div>

                <div class="bg-gradient-to-r from-orange-50 to-amber-50 rounded-2xl p-6 border border-orange-100">
                    <h2 class="text-lg font-bold text-orange-800 mb-4 flex items-center">
                        <i class="fas fa-clipboard-list mr-2"></i> Tareas Pendientes
                    </h2>
                    <div class="space-y-3">
                        <div class="bg-white p-4 rounded-xl shadow-sm flex justify-between items-center border border-orange-100 hover:shadow-md transition-shadow">
                            <div>
                                <h3 class="font-bold text-slate-800 text-sm">Test PHQ-9</h3>
                                <p class="text-xs text-slate-500">Evaluaci贸n semanal.</p>
                            </div>
                            <a href="/dashboard/test/phq9" class="bg-orange-500 hover:bg-orange-600 text-white px-3 py-1.5 rounded-lg text-xs font-bold transition shadow-sm">Completar</a>
                        </div>
                        <div class="bg-white p-4 rounded-xl shadow-sm flex justify-between items-center border border-orange-100 hover:shadow-md transition-shadow">
                            <div>
                                <h3 class="font-bold text-slate-800 text-sm">Test GAD-7</h3>
                                <p class="text-xs text-slate-500">Escala de ansiedad.</p>
                            </div>
                            <a href="/dashboard/test/gad7" class="bg-orange-500 hover:bg-orange-600 text-white px-3 py-1.5 rounded-lg text-xs font-bold transition shadow-sm">Completar</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow-sm p-6 border border-slate-100 flex flex-col h-full">
                <h2 class="text-xl font-bold text-slate-800 mb-4 flex items-center justify-between">
                    <span><i class="fas fa-clock mr-2 text-emerald-500"></i> Tu Agenda</span>
                    <% if (nextAppointment) { %>
                        <span class="text-xs bg-emerald-100 text-emerald-700 px-2 py-1 rounded font-bold">Pr贸xima Sesi贸n</span>
                    <% } %>
                </h2>
                
                <div class="flex-1 flex flex-col gap-6">
                    
                    <% if (nextAppointment) { %>
                        <div class="bg-white border-l-4 border-emerald-500 rounded-r-xl shadow-md p-5 relative overflow-hidden group">
                            <div class="flex justify-between items-start mb-3">
                                <div>
                                    <p class="font-bold text-slate-900 text-lg"><%= nextAppointment.modalidad === 'Virtual' ? 'Teleterapia' : 'Sesi贸n Presencial' %></p>
                                    <p class="text-sm text-slate-500">Con Dr. <%= nextAppointment.doc_apellido %></p>
                                </div>
                                <div class="bg-emerald-50 text-emerald-600 p-2 rounded-lg text-center min-w-[60px]">
                                    <p class="text-xs font-bold uppercase"><%= new Date(nextAppointment.fecha_hora_inicio).toLocaleDateString('es-ES', {month:'short'}) %></p>
                                    <p class="text-xl font-black leading-none"><%= new Date(nextAppointment.fecha_hora_inicio).getDate() %></p>
                                </div>
                            </div>
                            
                            <div class="flex items-center gap-4 text-sm text-slate-600 mb-4">
                                <span class="flex items-center gap-1 bg-slate-100 px-2 py-1 rounded"><i class="far fa-clock"></i> <%= new Date(nextAppointment.fecha_hora_inicio).toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'}) %></span>
                                <% if (nextAppointment.modalidad === 'Virtual') { %>
                                    <span class="flex items-center gap-1 text-indigo-600 bg-indigo-50 px-2 py-1 rounded font-bold"><i class="fas fa-video"></i> Online</span>
                                <% } else { %>
                                    <span class="flex items-center gap-1 text-slate-600 bg-slate-100 px-2 py-1 rounded font-bold"><i class="fas fa-map-marker-alt"></i> Consultorio</span>
                                <% } %>
                            </div>

                            <% if (nextAppointment.modalidad === 'Virtual' && nextAppointment.enlace_reunion) { %>
                                <a href="<%= nextAppointment.enlace_reunion %>" target="_blank" class="block w-full text-center bg-emerald-500 hover:bg-emerald-600 text-white font-bold py-3 rounded-xl shadow-lg shadow-emerald-200 transition-all transform active:scale-95">
                                    <i class="fas fa-video mr-2"></i> Unirse a la Sala Ahora
                                </a>
                            <% } else { %>
                                <div class="bg-slate-50 text-slate-400 text-center py-2 rounded-lg text-xs">
                                    Enlace disponible 10 min antes
                                </div>
                            <% } %>
                        </div>
                    <% } else { %>
                        <div class="bg-slate-50 rounded-xl p-8 text-center border-2 border-dashed border-slate-200">
                            <div class="inline-block p-3 bg-white rounded-full mb-3 shadow-sm"><i class="fas fa-calendar-times text-slate-300 text-2xl"></i></div>
                            <p class="font-bold text-slate-700">No tienes citas programadas.</p>
                            <p class="text-sm text-slate-500 mt-1">Contacta a administraci贸n para agendar.</p>
                        </div>
                    <% } %>

                    <% if (pastAppointments.length > 0) { %>
                        <div class="mt-4">
                            <h3 class="text-xs font-bold text-slate-400 uppercase mb-3 tracking-wider">Historial Reciente</h3>
                            <div class="space-y-3">
                                <% pastAppointments.forEach(past => { %>
                                    <div class="flex items-center justify-between p-3 bg-slate-50 rounded-lg border border-slate-100 hover:bg-white hover:shadow-sm transition-all">
                                        <div class="flex items-center gap-3">
                                            <div class="w-8 h-8 rounded-full bg-slate-200 flex items-center justify-center text-slate-500 text-xs">
                                                <i class="fas fa-check"></i>
                                            </div>
                                            <div>
                                                <p class="text-xs font-bold text-slate-700"><%= new Date(past.fecha_hora_inicio).toLocaleDateString() %></p>
                                                <p class="text-[10px] text-slate-400">Dr. <%= past.doc_apellido %></p>
                                            </div>
                                        </div>
                                        <span class="text-[10px] font-bold px-2 py-1 rounded bg-slate-200 text-slate-600"><%= past.estado %></span>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    <% } %>
                
                </div>
            </div>

        </div>
    </div>
</div>

<%- include('../partials/footer') %>