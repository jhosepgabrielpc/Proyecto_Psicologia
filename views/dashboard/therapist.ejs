<%- include('../partials/header', { title: 'Panel del Terapeuta' }) %>

<div class="min-h-screen bg-slate-50 font-sans pb-12">
    
    <div class="bg-white border-b border-slate-200 sticky top-0 z-30 shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <div>
                    <h1 class="text-2xl font-extrabold text-slate-900">
                        Bienvenido, <span class="text-indigo-600">Dr. <%= user.apellido %></span>
                    </h1>
                    <p class="text-sm text-slate-500 mt-1">Gestión de pacientes y monitoreo clínico.</p>
                </div>
                <div class="flex gap-3">
                    <a href="/dashboard/communication" class="bg-white border border-slate-300 text-slate-600 hover:text-indigo-600 hover:border-indigo-300 px-4 py-2 rounded-xl text-sm font-bold transition-all shadow-sm flex items-center gap-2">
                        <i class="fas fa-comments"></i> <span>Mensajes</span>
                    </a>
                    <a href="/dashboard/register-patient" class="bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2 rounded-xl text-sm font-bold transition-all shadow-lg hover:shadow-indigo-500/30 flex items-center gap-2">
                        <i class="fas fa-user-plus"></i> <span>Nuevo Paciente</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex items-center justify-between group hover:border-indigo-200 transition-colors">
                <div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-wider">Total Pacientes</p>
                    <p class="text-3xl font-extrabold text-slate-800 mt-1"><%= stats.total %></p>
                </div>
                <div class="h-12 w-12 rounded-xl bg-indigo-50 text-indigo-600 flex items-center justify-center text-xl group-hover:scale-110 transition-transform">
                    <i class="fas fa-users"></i>
                </div>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex items-center justify-between group hover:border-rose-200 transition-colors relative overflow-hidden">
                <% if (stats.critical > 0) { %>
                    <div class="absolute top-0 right-0 w-2 h-2 bg-rose-500 rounded-full animate-ping m-2"></div>
                <% } %>
                <div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-wider">En Riesgo</p>
                    <p class="text-3xl font-extrabold text-rose-600 mt-1"><%= stats.critical %></p>
                </div>
                <div class="h-12 w-12 rounded-xl bg-rose-50 text-rose-600 flex items-center justify-center text-xl group-hover:scale-110 transition-transform">
                    <i class="fas fa-heartbeat"></i>
                </div>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex items-center justify-between group hover:border-emerald-200 transition-colors">
                <div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-wider">Estables</p>
                    <p class="text-3xl font-extrabold text-emerald-600 mt-1"><%= stats.active %></p>
                </div>
                <div class="h-12 w-12 rounded-xl bg-emerald-50 text-emerald-600 flex items-center justify-center text-xl group-hover:scale-110 transition-transform">
                    <i class="fas fa-smile"></i>
                </div>
            </div>
        </div>

        <h2 class="text-lg font-bold text-slate-800 mb-6 flex items-center gap-2">
            <i class="fas fa-folder-open text-indigo-500"></i> Expedientes Activos
        </h2>

        <% if (patients.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% patients.forEach(p => { %>
                    <% 
                        // Determinar estado visual
                        const isCritical = p.ultima_valencia && p.ultima_valencia <= 2;
                        const cardBorder = isCritical ? 'border-rose-200 ring-1 ring-rose-100' : 'border-slate-100';
                        const statusColor = isCritical ? 'bg-rose-100 text-rose-700' : (p.ultima_valencia ? 'bg-emerald-100 text-emerald-700' : 'bg-slate-100 text-slate-500');
                        const statusText = isCritical ? 'Atención Requerida' : (p.ultima_valencia ? 'Estable' : 'Sin Datos');
                    %>
                    
                    <div class="bg-white rounded-2xl shadow-sm border <%= cardBorder %> hover:shadow-lg transition-all duration-300 flex flex-col relative overflow-hidden group">
                        
                        <div class="p-6 pb-4 flex items-start justify-between">
                            <div class="flex items-center gap-4">
                                <div class="relative">
                                    <% if (p.foto_perfil) { %>
                                        <img src="<%= p.foto_perfil %>" alt="Avatar" class="h-14 w-14 rounded-2xl object-cover border border-slate-100">
                                    <% } else { %>
                                        <div class="h-14 w-14 rounded-2xl bg-slate-100 flex items-center justify-center text-slate-400 font-bold text-xl border border-slate-200">
                                            <%= p.nombre.charAt(0) %>
                                        </div>
                                    <% } %>
                                    <% if (isCritical) { %>
                                        <span class="absolute -top-1 -right-1 flex h-4 w-4">
                                            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-rose-400 opacity-75"></span>
                                            <span class="relative inline-flex rounded-full h-4 w-4 bg-rose-500 border-2 border-white"></span>
                                        </span>
                                    <% } %>
                                </div>
                                <div>
                                    <h3 class="font-bold text-slate-900 text-lg leading-tight group-hover:text-indigo-600 transition-colors"><%= p.nombre %> <%= p.apellido %></h3>
                                    <p class="text-xs text-slate-400 mt-1 truncate max-w-[140px]"><%= p.email %></p>
                                </div>
                            </div>
                        </div>

                        <div class="px-6 py-2">
                            <div class="flex items-center justify-between p-3 bg-slate-50 rounded-xl">
                                <div>
                                    <p class="text-[10px] font-bold text-slate-400 uppercase">Último Check-in</p>
                                    <p class="text-xs font-bold text-slate-700 mt-0.5">
                                        <%= p.ultimo_checkin ? new Date(p.ultimo_checkin).toLocaleDateString() : '---' %>
                                    </p>
                                </div>
                                <div class="text-right">
                                    <span class="px-2 py-1 rounded-lg text-[10px] font-bold uppercase <%= statusColor %>">
                                        <%= statusText %>
                                    </span>
                                    <% if (p.ultima_valencia) { %>
                                        <p class="text-sm font-extrabold mt-0.5 <%= isCritical ? 'text-rose-600' : 'text-slate-700' %>">
                                            Nivel: <%= p.ultima_valencia %>/5
                                        </p>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <div class="mt-auto px-6 py-4 border-t border-slate-50 grid grid-cols-2 gap-3">
                            <a href="/dashboard/communication?chat=<%= p.id_paciente %>" class="flex items-center justify-center gap-2 py-2 rounded-lg text-slate-500 hover:bg-slate-50 hover:text-indigo-600 text-sm font-bold transition-colors">
                                <i class="far fa-comment-alt"></i> Chat
                            </a>
                            <a href="/dashboard/monitoring?patient=<%= p.id_paciente %>" class="flex items-center justify-center gap-2 py-2 rounded-lg bg-indigo-50 text-indigo-700 hover:bg-indigo-600 hover:text-white text-sm font-bold transition-all shadow-sm">
                                <i class="fas fa-chart-line"></i> Monitoreo
                            </a>
                        </div>
                    </div>
                <% }); %>
            </div>

        <% } else { %>
            
            <div class="text-center py-20 bg-white rounded-3xl border border-dashed border-slate-200">
                <div class="h-20 w-20 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4 text-slate-300 text-3xl">
                    <i class="fas fa-user-friends"></i>
                </div>
                <h3 class="text-lg font-bold text-slate-700">Sin pacientes asignados</h3>
                <p class="text-slate-400 text-sm mt-2 max-w-sm mx-auto">Aún no tienes pacientes registrados en tu cartera. Comienza registrando uno nuevo.</p>
                <a href="/dashboard/register-patient" class="mt-6 inline-block bg-indigo-600 text-white px-6 py-2.5 rounded-xl text-sm font-bold hover:bg-indigo-700 transition-all">
                    Registrar Primer Paciente
                </a>
            </div>

        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>