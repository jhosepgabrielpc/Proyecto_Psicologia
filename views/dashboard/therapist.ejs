<%- include('../partials/header', { title: 'Panel del Terapeuta' }) %>

<div class="min-h-screen bg-gradient-to-b from-slate-50 via-slate-50 to-indigo-50/40 font-sans pb-12">
    
    <!-- TOP BAR -->
    <div class="bg-white/95 border-b border-slate-200 sticky top-0 z-30 shadow-sm backdrop-blur">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-5">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <div>
                    <p class="text-[11px] font-semibold text-indigo-500 uppercase tracking-[0.25em] mb-1">
                        MindCare • Panel Clínico
                    </p>
                    <h1 class="text-2xl font-extrabold text-slate-900">
                        Bienvenido, <span class="text-indigo-600">Dr. <%= user.apellido %></span>
                    </h1>
                    <p class="text-sm text-slate-500 mt-1">
                        Gestión de pacientes, agenda y seguimiento emocional en un solo lugar.
                    </p>
                </div>
                <div class="flex flex-wrap gap-3 justify-end">
                    <a href="/dashboard/communication" class="bg-white border border-slate-300 text-slate-600 hover:text-indigo-600 hover:border-indigo-300 px-4 py-2 rounded-xl text-sm font-bold transition-all shadow-sm flex items-center gap-2">
                        <i class="fas fa-comments"></i> <span>Mensajes</span>
                    </a>
                    <a href="/dashboard/register-patient" class="bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2 rounded-xl text-sm font-bold transition-all shadow-lg hover:shadow-indigo-500/30 flex items-center gap-2">
                        <i class="fas fa-user-plus"></i> <span>Nuevo Paciente</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- CONTENIDO -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 space-y-8">

        <!-- KPIs -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex items-center justify-between group hover:border-indigo-200 transition-colors relative overflow-hidden">
                <div>
                    <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">Total Pacientes</p>
                    <p class="text-3xl font-extrabold text-slate-800 mt-1"><%= stats.total %></p>
                    <p class="text-xs text-slate-400 mt-1">Pacientes actualmente en tu cartera.</p>
                </div>
                <div class="h-12 w-12 rounded-xl bg-indigo-50 text-indigo-600 flex items-center justify-center text-xl group-hover:scale-110 transition-transform">
                    <i class="fas fa-users"></i>
                </div>
                <div class="absolute -right-6 -bottom-6 w-20 h-20 rounded-full bg-indigo-50/60 group-hover:bg-indigo-100/80 transition-colors"></div>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex items-center justify-between group hover:border-rose-200 transition-colors relative overflow-hidden">
                <% if (stats.critical > 0) { %>
                    <div class="absolute top-2 right-2 w-2 h-2 bg-rose-500 rounded-full animate-ping"></div>
                <% } %>
                <div>
                    <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">En Riesgo</p>
                    <p class="text-3xl font-extrabold text-rose-600 mt-1"><%= stats.critical %></p>
                    <p class="text-xs text-slate-400 mt-1">Pacientes con señales de alerta recientes.</p>
                </div>
                <div class="h-12 w-12 rounded-xl bg-rose-50 text-rose-600 flex items-center justify-center text-xl group-hover:scale-110 transition-transform">
                    <i class="fas fa-heartbeat"></i>
                </div>
                <div class="absolute -right-6 -bottom-6 w-20 h-20 rounded-full bg-rose-50/70 group-hover:bg-rose-100/80 transition-colors"></div>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex items-center justify-between group hover:border-emerald-200 transition-colors relative overflow-hidden">
                <div>
                    <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">Estables</p>
                    <p class="text-3xl font-extrabold text-emerald-600 mt-1"><%= stats.active %></p>
                    <p class="text-xs text-slate-400 mt-1">Pacientes con registros de ánimo dentro de rango.</p>
                </div>
                <div class="h-12 w-12 rounded-xl bg-emerald-50 text-emerald-600 flex items-center justify-center text-xl group-hover:scale-110 transition-transform">
                    <i class="fas fa-smile"></i>
                </div>
                <div class="absolute -right-6 -bottom-6 w-20 h-20 rounded-full bg-emerald-50/70 group-hover:bg-emerald-100/80 transition-colors"></div>
            </div>
        </div>

        <!-- AGENDA + ALERTAS -->
        <% if (locals.upcomingAppointments || locals.alerts) { %>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Agenda -->
                <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
                    <div class="px-6 py-4 border-b border-slate-100 flex justify-between items-center bg-slate-50/60">
                        <div>
                            <h2 class="font-bold text-slate-800 text-sm">Agenda de Hoy</h2>
                            <p class="text-[11px] text-slate-400 mt-0.5">Sesiones programadas para la fecha actual.</p>
                        </div>
                        <a href="/dashboard/appointments" class="text-[11px] font-bold text-blue-600 hover:text-blue-800 uppercase tracking-widest">
                            Ver todo
                        </a>
                    </div>
                    <div class="p-6 space-y-4">
                        <% if (locals.upcomingAppointments && upcomingAppointments.length > 0) { %>
                            <% upcomingAppointments.forEach(cita => { %>
                                <div class="flex items-center justify-between p-3 bg-slate-50 rounded-xl border border-slate-100 hover:border-indigo-200 hover:bg-indigo-50/40 transition-colors">
                                    <div class="flex items-center gap-3">
                                        <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-bold text-sm">
                                            <%= cita.nombre_paciente.charAt(0) %>
                                        </div>
                                        <div>
                                            <p class="font-bold text-sm text-slate-800"><%= cita.nombre_paciente %></p>
                                            <p class="text-[11px] text-slate-500"><i class="far fa-clock mr-1"></i><%= cita.hora %></p>
                                        </div>
                                    </div>
                                    <div class="flex flex-col items-end gap-1">
                                        <span class="px-2 py-1 bg-white border border-slate-200 text-slate-600 text-[11px] rounded-lg font-medium flex items-center gap-1">
                                            <i class="fas fa-video text-slate-400"></i>
                                            <%= cita.modalidad %>
                                        </span>
                                        <% if (cita.enlace) { %>
                                            <a href="<%= cita.enlace %>" class="text-[11px] text-indigo-600 hover:text-indigo-800 font-semibold" target="_blank">
                                                Unirse
                                            </a>
                                        <% } %>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="text-center text-slate-400 py-6">
                                <i class="far fa-calendar-check mb-2 text-2xl"></i>
                                <p class="text-xs">No hay más citas hoy.</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Alertas -->
                <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
                    <div class="px-6 py-4 border-b border-slate-100 flex justify-between items-center bg-rose-50/40">
                        <div>
                            <h2 class="font-bold text-slate-800 text-sm">Alertas Prioritarias</h2>
                            <p class="text-[11px] text-slate-400 mt-0.5">Pacientes con posible riesgo emocional.</p>
                        </div>
                        <span class="text-[11px] font-bold bg-rose-100 text-rose-600 px-2 py-0.5 rounded uppercase tracking-widest">
                            Acción requerida
                        </span>
                    </div>
                    <div class="p-6 space-y-3">
                        <% if (stats.critical > 0) { %>
                            <div class="flex items-start p-3 bg-white rounded-xl border-l-4 border-rose-500 shadow-sm group hover:bg-rose-50 transition-colors cursor-pointer">
                                <i class="fas fa-exclamation-circle text-rose-500 mt-1 mr-3 group-hover:scale-110 transition-transform"></i>
                                <div>
                                    <p class="font-bold text-sm text-slate-800 group-hover:text-rose-800">Pacientes Críticos</p>
                                    <p class="text-xs text-slate-500 group-hover:text-rose-600"><%= stats.critical %> pacientes necesitan revisión prioritaria.</p>
                                    <p class="text-[11px] text-slate-400 mt-1">Revisa sus check-ins, pruebas y notas de sesión.</p>
                                </div>
                            </div>
                        <% } else { %>
                            <p class="text-xs text-slate-400 text-center">Sin alertas activas por el momento.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- HEADER EXPEDIENTES -->
        <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between mt-4">
            <h2 class="text-lg font-bold text-slate-800 flex items-center gap-2">
                <span class="inline-flex h-8 w-8 rounded-xl bg-indigo-50 text-indigo-500 items-center justify-center">
                    <i class="fas fa-folder-open"></i>
                </span>
                Expedientes Activos
            </h2>

            <!-- Filtros + búsqueda -->
            <div class="flex flex-col sm:flex-row gap-3 items-stretch sm:items-center">
                <div class="inline-flex rounded-xl bg-white border border-slate-200 p-1 text-xs font-bold text-slate-500 overflow-hidden" id="patientFilters">
                    <button type="button" data-filter="all" class="px-3 py-1.5 rounded-lg bg-indigo-600 text-white shadow-sm">
                        Todos
                    </button>
                    <button type="button" data-filter="critical" class="px-3 py-1.5 rounded-lg hover:bg-slate-50">
                        Críticos
                    </button>
                    <button type="button" data-filter="stable" class="px-3 py-1.5 rounded-lg hover:bg-slate-50">
                        Estables
                    </button>
                </div>
                <div class="relative">
                    <i class="fas fa-search text-slate-400 absolute left-3 top-1/2 -translate-y-1/2 text-xs"></i>
                    <input 
                        type="text" 
                        id="patientSearch"
                        placeholder="Buscar por nombre o correo..."
                        class="pl-8 pr-3 py-2.5 rounded-xl border border-slate-200 bg-white text-xs text-slate-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent w-full sm:w-64"
                    >
                </div>
            </div>
        </div>

        <!-- GRID DE PACIENTES -->
        <% if (patients.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-4" id="patientsGrid">
                <% patients.forEach(p => { %>
                    <% 
                        const isCritical = p.ultima_valencia && p.ultima_valencia <= 2;
                        const cardBorder = isCritical ? 'border-rose-200 ring-1 ring-rose-100' : 'border-slate-100';
                        const statusColor = isCritical 
                            ? 'bg-rose-100 text-rose-700' 
                            : (p.ultima_valencia ? 'bg-emerald-100 text-emerald-700' : 'bg-slate-100 text-slate-500');
                        const statusText = isCritical 
                            ? 'Atención Requerida' 
                            : (p.ultima_valencia ? 'Estable' : 'Sin Datos');
                        const statusTag = isCritical ? 'critical' : (p.ultima_valencia ? 'stable' : 'nodata');
                    %>
                    
                    <div 
                        class="patient-card bg-white rounded-2xl shadow-sm border <%= cardBorder %> hover:shadow-lg transition-all duration-300 flex flex-col relative overflow-hidden group"
                        data-status="<%= statusTag %>"
                        data-name="<%= (p.nombre + ' ' + p.apellido).toLowerCase() %>"
                        data-email="<%= (p.email || '').toLowerCase() %>"
                    >
                        <div class="absolute inset-x-0 top-0 h-1 bg-gradient-to-r from-indigo-500 via-sky-500 to-emerald-400 opacity-0 group-hover:opacity-100 transition-opacity"></div>

                        <div class="p-6 pb-4 flex items-start justify-between">
                            <div class="flex items-center gap-4">
                                <div class="relative">
                                    <% if (p.foto_perfil) { %>
                                        <img src="<%= p.foto_perfil %>" alt="Avatar" class="h-14 w-14 rounded-2xl object-cover border border-slate-100">
                                    <% } else { %>
                                        <div class="h-14 w-14 rounded-2xl bg-slate-100 flex items-center justify-center text-slate-400 font-bold text-xl border border-slate-200">
                                            <%= p.nombre.charAt(0) %>
                                        </div>
                                    <% } %>
                                    <% if (isCritical) { %>
                                        <span class="absolute -top-1 -right-1 flex h-4 w-4">
                                            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-rose-400 opacity-75"></span>
                                            <span class="relative inline-flex rounded-full h-4 w-4 bg-rose-500 border-2 border-white"></span>
                                        </span>
                                    <% } %>
                                </div>
                                <div>
                                    <h3 class="font-bold text-slate-900 text-base leading-tight group-hover:text-indigo-600 transition-colors">
                                        <%= p.nombre %> <%= p.apellido %>
                                    </h3>
                                    <p class="text-[11px] text-slate-400 mt-1 truncate max-w-[160px]">
                                        <%= p.email %>
                                    </p>
                                </div>
                            </div>
                            <span class="px-2 py-1 rounded-full text-[10px] font-bold uppercase <%= statusColor %>">
                                <%= statusText %>
                            </span>
                        </div>

                        <div class="px-6 py-2">
                            <div class="flex items-center justify-between p-3 bg-slate-50 rounded-xl">
                                <div>
                                    <p class="text-[10px] font-bold text-slate-400 uppercase">Último Check-in</p>
                                    <p class="text-xs font-bold text-slate-700 mt-0.5">
                                        <%= p.ultimo_checkin ? new Date(p.ultimo_checkin).toLocaleDateString() : '---' %>
                                    </p>
                                </div>
                                <div class="text-right">
                                    <% if (p.ultima_valencia) { %>
                                        <p class="text-[10px] font-bold text-slate-400 uppercase mb-0.5">Nivel emocional</p>
                                        <p class="text-sm font-extrabold <%= isCritical ? 'text-rose-600' : 'text-slate-700' %>">
                                            <%= p.ultima_valencia %>/5
                                        </p>
                                    <% } else { %>
                                        <p class="text-[11px] text-slate-400 mt-1">Sin registros recientes</p>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <div class="mt-auto px-6 py-4 border-t border-slate-50 grid grid-cols-3 gap-2">
                            <a href="/dashboard/communication?chat=<%= p.id_paciente %>" class="flex items-center justify-center gap-2 py-2 rounded-lg text-slate-500 hover:bg-slate-50 hover:text-indigo-600 text-[11px] font-bold transition-colors">
                                <i class="far fa-comment-alt"></i> Chat
                            </a>
                            <a href="/dashboard/monitoring?patient=<%= p.id_paciente %>" class="flex items-center justify-center gap-2 py-2 rounded-lg bg-indigo-50 text-indigo-700 hover:bg-indigo-600 hover:text-white text-[11px] font-bold transition-all shadow-sm">
                                <i class="fas fa-chart-line"></i> Monitoreo
                            </a>
                            <a href="/reports/patient/<%= p.id_paciente %>/view" class="flex items-center justify-center gap-2 py-2 rounded-lg bg-slate-900 text-white hover:bg-slate-700 text-[11px] font-bold transition-all">
                                <i class="fas fa-file-medical-alt"></i> Expediente
                            </a>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="mt-6 text-center py-20 bg-white rounded-3xl border border-dashed border-slate-200">
                <div class="h-20 w-20 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4 text-slate-300 text-3xl">
                    <i class="fas fa-user-friends"></i>
                </div>
                <h3 class="text-lg font-bold text-slate-700">Sin pacientes asignados</h3>
                <p class="text-slate-400 text-sm mt-2 max-w-sm mx-auto">
                    Aún no tienes pacientes registrados en tu cartera. Comienza registrando uno nuevo.
                </p>
                <a href="/dashboard/register-patient" class="mt-6 inline-block bg-indigo-600 text-white px-6 py-2.5 rounded-xl text-sm font-bold hover:bg-indigo-700 transition-all">
                    Registrar Primer Paciente
                </a>
            </div>
        <% } %>
    </div>
</div>

<script>
    // Filtros + búsqueda
    const filterContainer = document.getElementById('patientFilters');
    const patientCards = document.querySelectorAll('.patient-card');
    const searchInput = document.getElementById('patientSearch');

    function applyFilters() {
        const activeBtn = filterContainer?.querySelector('button.bg-indigo-600');
        const filter = activeBtn ? activeBtn.getAttribute('data-filter') : 'all';
        const query = (searchInput?.value || '').toLowerCase().trim();

        patientCards.forEach(card => {
            const status = card.getAttribute('data-status');
            const name = card.getAttribute('data-name') || '';
            const email = card.getAttribute('data-email') || '';

            let visible = true;

            if (filter === 'critical' && status !== 'critical') visible = false;
            if (filter === 'stable' && status !== 'stable') visible = false;

            if (query) {
                const matches = name.includes(query) || email.includes(query);
                if (!matches) visible = false;
            }

            card.style.display = visible ? '' : 'none';
        });
    }

    filterContainer?.addEventListener('click', (e) => {
        if (e.target.tagName.toLowerCase() === 'button') {
            filterContainer.querySelectorAll('button').forEach(btn => {
                btn.classList.remove('bg-indigo-600', 'text-white', 'shadow-sm');
                btn.classList.add('hover:bg-slate-50');
            });
            e.target.classList.add('bg-indigo-600', 'text-white', 'shadow-sm');
            e.target.classList.remove('hover:bg-slate-50');
            applyFilters();
        }
    });

    searchInput?.addEventListener('input', applyFilters);

    applyFilters();
</script>

<%- include('../partials/footer') %>
