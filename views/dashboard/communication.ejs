<%- include('../partials/header', { title: 'Centro de Mensajes' }) %>

<div class="h-[calc(100vh-4rem)] bg-slate-50 flex overflow-hidden font-sans">
    
    <div class="w-full md:w-96 bg-white border-r border-slate-200 flex flex-col <%= activeChat ? 'hidden md:flex' : 'flex' %> shadow-sm z-10">
        
        <div class="p-4 border-b border-slate-100 bg-slate-50">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-bold text-slate-800">Mensajes</h2>
                <span class="bg-indigo-100 text-indigo-700 px-2 py-1 rounded-lg text-xs font-bold">
                    <%= contacts.length %> Chats
                </span>
            </div>
            <div class="relative group">
                <input type="text" placeholder="Buscar conversación..." class="w-full pl-10 pr-4 py-2.5 bg-white border border-slate-200 rounded-xl text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all">
                <i class="fas fa-search absolute left-3 top-3 text-slate-400 group-focus-within:text-indigo-500 transition-colors"></i>
            </div>
        </div>

        <div class="flex-1 overflow-y-auto custom-scrollbar">
            <% if (contacts.length === 0) { %>
                <div class="flex flex-col items-center justify-center h-64 text-slate-400 p-6 text-center">
                    <div class="bg-slate-100 p-4 rounded-full mb-3">
                        <i class="far fa-comments text-3xl text-slate-300"></i>
                    </div>
                    <p class="text-sm font-medium text-slate-500">Tu lista de contactos está vacía.</p>
                    <p class="text-xs mt-1">Los pacientes o terapeutas asignados aparecerán aquí automáticamente.</p>
                </div>
            <% } %>

            <div class="divide-y divide-slate-50">
                <% contacts.forEach(function(contact) { %>
                    <a href="/dashboard/communication?chat=<%= contact.id_usuario %>" 
                       class="flex items-center p-4 hover:bg-indigo-50/50 transition-all cursor-pointer relative group
                       <%= (activeChat && activeChat.id_usuario === contact.id_usuario) ? 'bg-indigo-50 border-l-4 border-indigo-600' : 'border-l-4 border-transparent' %>">
                        
                        <div class="relative flex-shrink-0">
                            <div class="h-12 w-12 rounded-full bg-gradient-to-br from-slate-100 to-slate-200 flex items-center justify-center text-slate-600 font-bold text-lg border border-slate-200 shadow-sm overflow-hidden">
                                <% if(contact.foto_perfil) { %>
                                    <img src="<%= contact.foto_perfil %>" class="h-full w-full object-cover">
                                <% } else { %>
                                    <%= contact.nombre.charAt(0).toUpperCase() %>
                                <% } %>
                            </div>
                            <span class="absolute bottom-0 right-0 block h-3 w-3 rounded-full bg-emerald-500 ring-2 ring-white"></span>
                        </div>

                        <div class="ml-4 flex-1 min-w-0">
                            <div class="flex justify-between items-baseline">
                                <h3 class="text-sm font-bold text-slate-900 truncate group-hover:text-indigo-700 transition-colors">
                                    <%= contact.nombre %> <%= contact.apellido %>
                                </h3>
                                <span class="text-[10px] font-medium px-1.5 py-0.5 rounded bg-slate-100 text-slate-500">
                                    <%= contact.nombre_rol %>
                                </span>
                            </div>
                            <p class="text-xs text-slate-500 truncate mt-0.5 flex items-center gap-1">
                                <% if (contact.sin_leer > 0) { %>
                                    <span class="font-bold text-indigo-600">Tienes mensajes nuevos</span>
                                <% } else { %>
                                    <i class="fas fa-reply text-[10px] opacity-50"></i> Haz clic para escribir...
                                <% } %>
                            </p>
                        </div>

                        <% if (contact.sin_leer > 0) { %>
                            <div class="absolute top-4 right-4 bg-rose-500 text-white text-[10px] font-bold h-5 w-5 flex items-center justify-center rounded-full shadow-sm animate-pulse">
                                <%= contact.sin_leer %>
                            </div>
                        <% } %>
                    </a>
                <% }); %>
            </div>
        </div>
    </div>

    <div class="flex-1 flex flex-col bg-[#efe7dd] relative <%= !activeChat ? 'hidden md:flex' : 'flex' %>">
        
        <div class="absolute inset-0 opacity-[0.06] pointer-events-none" 
             style="background-image: url('https://user-images.githubusercontent.com/15075759/28719144-86dc0f70-73b1-11e7-911d-60d70fcded21.png');">
        </div>

        <% if (activeChat) { %>
            <div class="h-16 px-4 md:px-6 flex items-center justify-between bg-white border-b border-slate-200 shadow-sm z-20">
                <div class="flex items-center">
                    <a href="/dashboard/communication" class="md:hidden mr-3 p-2 -ml-2 text-slate-500 hover:text-indigo-600 hover:bg-slate-100 rounded-full transition-all">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    
                    <div class="h-10 w-10 rounded-full bg-indigo-100 text-indigo-700 flex items-center justify-center font-bold border border-indigo-200 shadow-sm">
                        <%= activeChat.nombre.charAt(0).toUpperCase() %>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-bold text-slate-900 flex items-center gap-2">
                            <%= activeChat.nombre %> <%= activeChat.apellido %>
                            <i class="fas fa-check-circle text-indigo-500 text-xs" title="Verificado"></i>
                        </h3>
                        <div class="flex items-center gap-1.5">
                            <span class="relative flex h-2 w-2">
                              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
                              <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
                            </span>
                            <span class="text-xs text-slate-500 font-medium">En línea</span>
                        </div>
                    </div>
                </div>
                
                <div class="flex items-center gap-1">
                    <button class="p-2 text-slate-400 hover:text-indigo-600 hover:bg-slate-100 rounded-full transition-all" title="Videollamada">
                        <i class="fas fa-video"></i>
                    </button>
                    <button class="p-2 text-slate-400 hover:text-indigo-600 hover:bg-slate-100 rounded-full transition-all" title="Opciones">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                </div>
            </div>

            <div id="chat-container" class="flex-1 overflow-y-auto p-4 md:p-6 space-y-2 custom-scrollbar z-10 scroll-smooth">
                <div class="flex justify-center my-4">
                    <span class="bg-slate-200/80 text-slate-600 text-[10px] font-bold px-3 py-1 rounded-full shadow-sm uppercase tracking-wide">Hoy</span>
                </div>

                <% messages.forEach(function(msg) { %>
                    <% const isMe = msg.id_remitente == user.id_usuario; %>
                    <div class="flex w-full <%= isMe ? 'justify-end' : 'justify-start' %> animate-fade-in">
                        <div class="max-w-[85%] md:max-w-[65%] px-4 py-2 shadow-sm text-sm relative 
                                    <%= isMe ? 'bg-indigo-600 text-white rounded-2xl rounded-tr-sm' : 'bg-white text-slate-800 rounded-2xl rounded-tl-sm' %>">
                            <p class="break-words leading-relaxed whitespace-pre-wrap"><%= msg.contenido %></p>
                            <div class="flex items-center justify-end gap-1 mt-1 select-none">
                                <span class="text-[10px] opacity-70 font-medium">
                                    <%= new Date(msg.fecha_envio).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                                </span>
                                <% if(isMe) { %>
                                    <i class="fas fa-check-double text-[10px] <%= msg.leido ? 'text-blue-300' : 'opacity-50' %>"></i>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

            <div class="p-4 bg-white border-t border-slate-200 z-20">
                <form id="chat-form" class="flex items-end gap-2 md:gap-3 max-w-4xl mx-auto">
                    <input type="hidden" id="destinatario-id" value="<%= activeChat.id_usuario %>">
                    
                    <button type="button" class="mb-2 p-2 text-slate-400 hover:text-indigo-600 transition-colors rounded-full hover:bg-slate-100">
                        <i class="far fa-smile text-xl"></i>
                    </button>
                    <button type="button" class="mb-2 p-2 text-slate-400 hover:text-indigo-600 transition-colors rounded-full hover:bg-slate-100">
                        <i class="fas fa-paperclip text-xl"></i>
                    </button>
                    
                    <div class="flex-1 bg-slate-100 rounded-2xl border border-transparent focus-within:border-indigo-300 focus-within:ring-4 focus-within:ring-indigo-50 transition-all">
                        <textarea id="msg-input" rows="1" 
                            class="w-full bg-transparent border-0 px-4 py-3 focus:ring-0 text-slate-800 placeholder-slate-400 resize-none max-h-32" 
                            placeholder="Escribe un mensaje..."
                            oninput="this.style.height = ''; this.style.height = this.scrollHeight + 'px'"></textarea>
                    </div>

                    <button type="submit" class="mb-1 p-3 bg-indigo-600 text-white rounded-full hover:bg-indigo-700 active:scale-95 transition-all shadow-md hover:shadow-lg flex-shrink-0">
                        <i class="fas fa-paper-plane pl-0.5"></i>
                    </button>
                </form>
            </div>

        <% } else { %>
            <div class="flex-1 flex flex-col items-center justify-center text-center p-8 z-10">
                <div class="w-40 h-40 bg-indigo-50 rounded-full flex items-center justify-center mb-6 shadow-inner">
                    <i class="fas fa-comments text-5xl text-indigo-500"></i>
                </div>
                <h2 class="text-2xl font-extrabold text-slate-800 mb-2">Centro de Comunicaciones</h2>
                <p class="text-slate-500 max-w-md leading-relaxed">
                    Selecciona una conversación para comenzar. Aquí podrás mantener contacto seguro y privado.
                </p>
            </div>
        <% } %>

    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
    // CORRECCIÓN SINTAXIS: Usamos comillas para evitar errores del editor con EJS
    const myId = '<%= user.id_usuario %>';
    const destId = document.getElementById('destinatario-id') ? document.getElementById('destinatario-id').value : null;
    
    const socket = io();
    const chatContainer = document.getElementById('chat-container');
    const chatForm = document.getElementById('chat-form');
    const msgInput = document.getElementById('msg-input');
    
    if(chatContainer) chatContainer.scrollTop = chatContainer.scrollHeight;

    socket.emit('join-room', `user-${myId}`);

    if(chatForm && msgInput) {
        // Enviar con Enter
        msgInput.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                chatForm.dispatchEvent(new Event('submit'));
            }
        });

        chatForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const msg = msgInput.value.trim();
            if(!msg) return;

            // 1. UI Optimista
            appendMessage(msg, true); 
            msgInput.value = '';
            msgInput.style.height = 'auto'; 

            // 2. Guardar en BD (Ruta Corregida: /dashboard/communication/save)
            fetch('/dashboard/communication/save', { 
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id_destinatario: destId, contenido: msg })
            })
            .then(res => {
                if (!res.ok) throw new Error('Error en la red');
                return res.json();
            })
            .then(data => {
                if(data.success) {
                    socket.emit('send-message', {
                        roomId: `user-${destId}`,
                        content: msg,
                        senderId: myId
                    });
                }
            })
            .catch(err => console.error("Error enviando mensaje:", err));
        });
    }

    socket.on('receive-message', (data) => {
        if(destId && data.senderId == destId) {
            appendMessage(data.content, false);
        }
    });

    function appendMessage(text, isMe) {
        if(!chatContainer) return;
        const div = document.createElement('div');
        div.className = `flex w-full ${isMe ? 'justify-end' : 'justify-start'} animate-fade-in mb-2`;
        const bubbleClass = isMe ? 'bg-indigo-600 text-white rounded-2xl rounded-tr-sm' : 'bg-white text-slate-800 rounded-2xl rounded-tl-sm';
        const now = new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
        
        div.innerHTML = `
            <div class="max-w-[85%] md:max-w-[65%] px-4 py-2 shadow-sm text-sm relative ${bubbleClass}">
                <p class="break-words leading-relaxed whitespace-pre-wrap">${text}</p>
                <div class="flex items-center justify-end gap-1 mt-1 select-none">
                    <span class="text-[10px] opacity-70 font-medium">${now}</span>
                    ${isMe ? '<i class="fas fa-check ml-1 opacity-50"></i>' : ''}
                </div>
            </div>
        `;
        chatContainer.appendChild(div);
        requestAnimationFrame(() => chatContainer.scrollTo({ top: chatContainer.scrollHeight, behavior: 'smooth' }));
    }
</script>