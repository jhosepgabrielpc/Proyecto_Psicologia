<%- include('../partials/header', { title: 'Gestión de Historiales' }) %>

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <div class="mb-8 flex flex-col md:flex-row justify-between items-center bg-white p-6 rounded-xl shadow-sm border border-gray-100">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 flex items-center">
                    <span class="bg-blue-100 text-blue-600 p-2 rounded-lg mr-3">
                        <i class="fas fa-folder-open"></i>
                    </span>
                    Historiales Clínicos
                </h1>
                <p class="text-gray-600 mt-2 ml-14">Administre los expedientes de sus pacientes.</p>
            </div>
            <div class="mt-4 md:mt-0 relative w-full md:w-auto">
                <input type="text" id="patient-search" placeholder="Buscar paciente por nombre..." 
                       class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 w-full md:w-72 transition-shadow focus:shadow-md">
                <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
            </div>
        </div>

        <% if (patients && patients.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="patients-grid">
                <% patients.forEach(patient => { %>
                
                <div class="patient-card bg-white rounded-xl shadow-sm hover:shadow-md transition duration-200 overflow-hidden border border-gray-100 flex flex-col">
                    <div class="p-6 flex-grow">
                        <div class="flex items-center space-x-4 mb-4">
                            <% if (patient.foto_perfil) { %>
                                <img src="<%= patient.foto_perfil %>" alt="Perfil" class="h-16 w-16 rounded-full object-cover border-2 border-blue-50">
                            <% } else { %>
                                <div class="h-16 w-16 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 text-xl font-bold border-2 border-blue-50">
                                    <%= patient.nombre.charAt(0) %><%= patient.apellido.charAt(0) %>
                                </div>
                            <% } %>
                            <div>
                                <h3 class="patient-name text-lg font-bold text-gray-900"><%= patient.nombre %> <%= patient.apellido %></h3>
                                <p class="text-xs text-gray-500"><i class="fas fa-envelope mr-1"></i><%= patient.email %></p>
                            </div>
                        </div>
                        
                        <div class="grid grid-cols-2 gap-4 mb-4 text-sm">
                            <div class="bg-gray-50 p-2 rounded-lg text-center">
                                <p class="text-gray-500 text-xs uppercase">Estado</p>
                                <span class="font-semibold <%= patient.estado_tratamiento === 'activo' ? 'text-green-600' : 'text-gray-600' %>">
                                    <%= patient.estado_tratamiento.charAt(0).toUpperCase() + patient.estado_tratamiento.slice(1) %>
                                </span>
                            </div>
                            <div class="bg-gray-50 p-2 rounded-lg text-center">
                                <p class="text-gray-500 text-xs uppercase">Sesiones</p>
                                <span class="font-semibold text-blue-600"><%= patient.sesiones_completadas || 0 %></span>
                            </div>
                        </div>
                    </div>

                    <div class="bg-gray-50 px-6 py-4 border-t border-gray-100 flex justify-between items-center">
                        <a href="/reports/patient/<%= patient.id_paciente %>/view" class="text-blue-600 font-medium hover:text-blue-800 text-sm flex items-center transition">
                            Ver Expediente <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                        <a href="/reports/patient/<%= patient.id_paciente %>/create-report" class="text-gray-400 hover:text-green-600 transition" title="Crear Reporte">
                            <i class="fas fa-file-medical text-lg"></i>
                        </a>
                    </div>
                </div>
                <% }) %>
            </div>
            
            <div id="no-results-message" class="hidden text-center py-10">
                <div class="bg-gray-100 rounded-full h-16 w-16 flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-search text-gray-400 text-2xl"></i>
                </div>
                <h3 class="text-gray-600 font-medium">No se encontraron pacientes</h3>
                <p class="text-gray-400 text-sm">Intenta con otro nombre.</p>
            </div>

        <% } else { %>
            <div class="text-center py-16 bg-white rounded-xl shadow-sm border border-dashed border-gray-300">
                <div class="h-20 w-20 bg-gray-50 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-user-friends text-3xl text-gray-300"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-900">No hay pacientes asignados</h3>
                <p class="text-gray-500 mt-2">Los historiales aparecerán aquí cuando se le asignen pacientes activos.</p>
            </div>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>