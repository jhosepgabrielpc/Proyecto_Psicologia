<%- include('../partials/header', { title: 'Dirección Clínica' }) %>

<div class="min-h-screen bg-slate-50 py-8 font-sans">
    
    <div class="bg-white border-b border-slate-200 sticky top-0 z-30 shadow-sm mb-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <div class="flex justify-between items-center">
                <div class="flex items-center gap-3">
                    <div class="h-10 w-10 bg-teal-600 rounded-lg flex items-center justify-center text-white shadow-lg shadow-teal-500/40">
                        <i class="fas fa-folder-open"></i>
                    </div>
                    <div>
                        <h1 class="text-lg font-bold text-slate-800 leading-none">Gestión de Expedientes</h1>
                        <p class="text-xs text-slate-500">Panel del Director Clínico</p>
                    </div>
                </div>
                <div class="flex gap-3">
                    <a href="/reports/analytics" class="bg-slate-100 hover:bg-slate-200 text-slate-700 px-4 py-2 rounded-lg text-sm font-bold transition-colors flex items-center gap-2">
                        <i class="fas fa-chart-pie"></i> Ver Analytics Global
                    </a>
                    <div class="h-8 w-[1px] bg-slate-300 mx-1"></div>
                    <div class="text-right hidden md:block">
                        <p class="text-xs text-slate-400">Usuario</p>
                        <p class="font-bold text-sm text-teal-700"><%= user.nombre %> <%= user.apellido %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex items-center justify-between">
                <div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-wider">Pacientes Activos</p>
                    <p class="text-3xl font-black text-slate-800 mt-1"><%= stats.pacientes_activos %></p>
                </div>
                <div class="h-12 w-12 bg-teal-50 text-teal-600 rounded-xl flex items-center justify-center text-xl">
                    <i class="fas fa-user-injured"></i>
                </div>
            </div>
            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex items-center justify-between">
                <div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-wider">Reportes (Mes)</p>
                    <p class="text-3xl font-black text-indigo-600 mt-1"><%= stats.reportes_mes %></p>
                </div>
                <div class="h-12 w-12 bg-indigo-50 text-indigo-600 rounded-xl flex items-center justify-center text-xl">
                    <i class="fas fa-file-signature"></i>
                </div>
            </div>
            <div class="bg-gradient-to-br from-teal-600 to-emerald-600 p-6 rounded-2xl shadow-lg text-white flex items-center justify-between relative overflow-hidden">
                <div class="absolute right-0 top-0 opacity-10 transform translate-x-4 -translate-y-4">
                    <i class="fas fa-clipboard-check text-8xl"></i>
                </div>
                <div class="relative z-10">
                    <p class="text-xs font-bold text-teal-100 uppercase tracking-wider">Sesiones Totales</p>
                    <p class="text-3xl font-black mt-1"><%= stats.sesiones_totales %></p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
            <div class="px-6 py-5 border-b border-slate-100 flex flex-col sm:flex-row justify-between items-center gap-4 bg-slate-50/50">
                <h3 class="font-bold text-slate-700 flex items-center gap-2">
                    <i class="fas fa-users text-teal-500"></i> Directorio Médico
                </h3>
                <div class="relative w-full sm:w-64">
                    <input type="text" id="searchPatient" onkeyup="filterTable()" placeholder="Buscar por nombre..." class="w-full pl-10 pr-4 py-2 bg-white border border-slate-200 rounded-lg text-sm focus:outline-none focus:border-teal-500 focus:ring-1 focus:ring-teal-500 transition-all">
                    <i class="fas fa-search absolute left-3 top-2.5 text-slate-400 text-sm"></i>
                </div>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse" id="patientsTable">
                    <thead>
                        <tr class="bg-white text-slate-400 text-xs uppercase tracking-wider border-b border-slate-100">
                            <th class="px-6 py-4 font-bold">Paciente</th>
                            <th class="px-6 py-4 font-bold text-center">Estado</th>
                            <th class="px-6 py-4 font-bold text-center">Documentación</th>
                            <th class="px-6 py-4 font-bold">Última Sesión</th>
                            <th class="px-6 py-4 font-bold text-right">Acción</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-50">
                        <% if (patients.length > 0) { %>
                            <% patients.forEach(p => { %>
                                <tr class="hover:bg-slate-50 transition-colors group">
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-3">
                                            <div class="h-10 w-10 rounded-full bg-slate-200 flex items-center justify-center font-bold text-slate-500 text-sm border-2 border-white shadow-sm">
                                                <%= p.nombre.charAt(0) %><%= p.apellido.charAt(0) %>
                                            </div>
                                            <div>
                                                <p class="font-bold text-slate-800 text-sm"><%= p.nombre %> <%= p.apellido %></p>
                                                <p class="text-xs text-slate-400"><%= p.email %></p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                        <% if (p.estado_tratamiento === 'activo') { %>
                                            <span class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded-full text-[10px] font-bold bg-emerald-100 text-emerald-700 border border-emerald-200">
                                                <span class="w-1.5 h-1.5 rounded-full bg-emerald-500"></span> ACTIVO
                                            </span>
                                        <% } else { %>
                                            <span class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded-full text-[10px] font-bold bg-slate-100 text-slate-500 border border-slate-200">
                                                INACTIVO
                                            </span>
                                        <% } %>
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                        <div class="inline-flex items-center gap-2 text-xs font-medium text-slate-600 bg-slate-50 px-3 py-1 rounded-lg border border-slate-100">
                                            <i class="fas fa-file-medical text-teal-500"></i>
                                            <%= p.total_reportes %> Reportes
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-slate-500">
                                        <% if (p.ultima_sesion) { %>
                                            <%= new Date(p.ultima_sesion).toLocaleDateString() %>
                                        <% } else { %>
                                            <span class="text-slate-400 italic">Sin registro</span>
                                        <% } %>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <a href="/reports/patient/<%= p.id_paciente %>/view" class="inline-flex items-center gap-2 bg-teal-600 hover:bg-teal-700 text-white text-xs font-bold px-4 py-2 rounded-lg shadow-md shadow-teal-500/20 transition-all transform active:scale-95">
                                            <span>Abrir Expediente</span> <i class="fas fa-arrow-right"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="px-6 py-12 text-center text-slate-400">
                                    <div class="inline-block p-4 bg-slate-50 rounded-full mb-2"><i class="fas fa-folder-open text-2xl"></i></div>
                                    <p>No hay pacientes registrados en el sistema.</p>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="bg-slate-50 px-6 py-3 border-t border-slate-200 text-xs text-slate-400 flex justify-between items-center">
                <span>Mostrando <%= patients.length %> registros</span>
                <div class="flex gap-1">
                    <button class="w-6 h-6 rounded bg-white border border-slate-200 flex items-center justify-center hover:bg-slate-100"><i class="fas fa-chevron-left text-[10px]"></i></button>
                    <button class="w-6 h-6 rounded bg-white border border-slate-200 flex items-center justify-center hover:bg-slate-100"><i class="fas fa-chevron-right text-[10px]"></i></button>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    function filterTable() {
        const input = document.getElementById("searchPatient");
        const filter = input.value.toUpperCase();
        const table = document.getElementById("patientsTable");
        const tr = table.getElementsByTagName("tr");

        for (let i = 1; i < tr.length; i++) {
            const tdName = tr[i].getElementsByTagName("td")[0];
            if (tdName) {
                const txtValue = tdName.textContent || tdName.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }       
        }
    }
</script>

<%- include('../partials/footer') %>