<%- include('../partials/header', { title: 'Panel del Terapeuta' }) %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-indigo-50/40 to-slate-100 font-sans pb-12">

    <!-- TOPBAR FIJA -->
    <div class="bg-white/95 backdrop-blur border-b border-slate-200 sticky top-0 z-30 shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <div>
                    <h1 class="text-2xl font-extrabold text-slate-900">
                        Bienvenido, <span class="text-indigo-600">Dr. <%= user.apellido %></span>
                    </h1>
                    <p class="text-sm text-slate-500 mt-1">
                        Gestión integral de pacientes, agenda y monitoreo clínico.
                    </p>
                    <p class="text-[11px] text-slate-400 mt-1 flex items-center gap-1">
                        <span class="inline-flex h-2 w-2 rounded-full bg-emerald-500 animate-pulse"></span>
                        Panel en vivo · <span id="lastSyncLabel" class="font-semibold"></span>
                    </p>
                </div>
                <div class="flex flex-wrap gap-3">
                    <button
                        type="button"
                        onclick="window.location.reload()"
                        class="bg-white border border-slate-300 text-slate-600 hover:text-indigo-600 hover:border-indigo-300 px-4 py-2 rounded-xl text-sm font-bold transition-all shadow-sm flex items-center gap-2"
                    >
                        <i class="fas fa-rotate-right"></i> <span>Actualizar</span>
                    </button>
                    <a href="/dashboard/communication"
                       class="bg-white border border-slate-300 text-slate-600 hover:text-indigo-600 hover:border-indigo-300 px-4 py-2 rounded-xl text-sm font-bold transition-all shadow-sm flex items-center gap-2">
                        <i class="fas fa-comments"></i> <span>Mensajes</span>
                    </a>
                    <a href="/dashboard/register-patient"
                       class="bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2 rounded-xl text-sm font-bold transition-all shadow-lg hover:shadow-indigo-500/30 flex items-center gap-2">
                        <i class="fas fa-user-plus"></i> <span>Nuevo Paciente</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- CONTENIDO -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

        <% 
            // ------------------------------
            // Normalización de métricas
            // ------------------------------
            const hasStats = typeof stats !== 'undefined' && stats;
            const listaPacientes = Array.isArray(patients) ? patients : [];

            const totalPacientes = hasStats && stats.total != null
                ? stats.total
                : listaPacientes.length;

            const enRiesgo = hasStats && (stats.critical != null || stats.criticos != null)
                ? (stats.critical ?? stats.criticos)
                : listaPacientes.filter(p => p.ultima_valencia && p.ultima_valencia <= 2).length;

            const estables = hasStats && (stats.active != null || stats.estables != null)
                ? (stats.active ?? stats.estables)
                : listaPacientes.filter(p => p.ultima_valencia && p.ultima_valencia >= 3).length;
        %>

        <!-- KPIs -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex items-center justify-between group hover:border-indigo-200 hover:bg-indigo-50/40 transition-colors">
                <div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-wider">
                        Total Pacientes
                    </p>
                    <p class="text-3xl font-extrabold text-slate-800 mt-1">
                        <%= totalPacientes %>
                    </p>
                    <p class="text-[11px] text-slate-400 mt-1">
                        Cartera clínica actual.
                    </p>
                </div>
                <div class="h-12 w-12 rounded-xl bg-indigo-50 text-indigo-600 flex items-center justify-center text-xl group-hover:scale-110 transition-transform">
                    <i class="fas fa-users"></i>
                </div>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex items-center justify-between group hover:border-rose-200 hover:bg-rose-50/40 transition-colors relative overflow-hidden">
                <% if (enRiesgo > 0) { %>
                    <div class="absolute top-0 right-0 w-2 h-2 bg-rose-500 rounded-full animate-ping m-2"></div>
                <% } %>
                <div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-wider">
                        En Riesgo
                    </p>
                    <p class="text-3xl font-extrabold text-rose-600 mt-1">
                        <%= enRiesgo %>
                    </p>
                    <p class="text-[11px] text-slate-400 mt-1">
                        Pacientes que requieren revisión prioritaria.
                    </p>
                </div>
                <div class="h-12 w-12 rounded-xl bg-rose-50 text-rose-600 flex items-center justify-center text-xl group-hover:scale-110 transition-transform">
                    <i class="fas fa-heartbeat"></i>
                </div>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex items-center justify-between group hover:border-emerald-200 hover:bg-emerald-50/40 transition-colors">
                <div>
                    <p class="text-xs font-bold text-slate-400 uppercase tracking-wider">
                        Estables
                    </p>
                    <p class="text-3xl font-extrabold text-emerald-600 mt-1">
                        <%= estables %>
                    </p>
                    <p class="text-[11px] text-slate-400 mt-1">
                        Seguimiento sin incidencias críticas recientes.
                    </p>
                </div>
                <div class="h-12 w-12 rounded-xl bg-emerald-50 text-emerald-600 flex items-center justify-center text-xl group-hover:scale-110 transition-transform">
                    <i class="fas fa-smile"></i>
                </div>
            </div>
        </div>

        <!-- AGENDA + ALERTAS -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-10">
            <!-- Agenda de hoy -->
            <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
                <div class="px-6 py-4 border-b border-slate-100 flex justify-between items-center bg-slate-50/60">
                    <div class="flex flex-col">
                        <h2 class="font-bold text-slate-800 text-sm flex items-center gap-2">
                            <i class="far fa-calendar-alt text-indigo-500"></i>
                            Agenda de Hoy
                        </h2>
                        <p class="text-[11px] text-slate-400 mt-1">
                            Próximas sesiones agendadas para hoy.
                        </p>
                    </div>
                    <a href="/dashboard/appointments" class="text-xs font-bold text-indigo-600 hover:text-indigo-800">
                        Ver calendario
                    </a>
                </div>
                <div class="p-6 space-y-4">
                    <% if (locals.upcomingAppointments && upcomingAppointments.length > 0) { %>
                        <% upcomingAppointments.forEach(cita => { %>
                            <div class="flex items-center justify-between p-3 bg-slate-50 rounded-xl border border-slate-100 hover:border-indigo-200 hover:bg-indigo-50/40 transition-colors">
                                <div class="flex items-center gap-3">
                                    <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-bold text-sm">
                                        <%= cita.nombre_paciente.charAt(0) %>
                                    </div>
                                    <div>
                                        <p class="font-bold text-sm text-slate-800">
                                            <%= cita.nombre_paciente %>
                                        </p>
                                        <p class="text-xs text-slate-500 flex items-center gap-1 mt-0.5">
                                            <i class="far fa-clock"></i>
                                            <span><%= cita.hora %></span>
                                            <% if (cita.en_riesgo) { %>
                                                <span class="inline-flex items-center gap-1 px-1.5 py-0.5 rounded-full bg-rose-100 text-rose-600 text-[10px] font-bold">
                                                    <span class="w-1.5 h-1.5 rounded-full bg-rose-500 animate-pulse"></span>
                                                    Riesgo
                                                </span>
                                            <% } %>
                                        </p>
                                    </div>
                                </div>
                                <span class="px-2 py-1 bg-white border border-slate-200 text-slate-600 text-xs rounded-lg font-medium">
                                    <%= cita.modalidad %>
                                </span>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="text-center text-slate-400 py-6">
                            <i class="far fa-calendar-check mb-2 text-2xl"></i>
                            <p class="text-xs">No hay más citas programadas para hoy.</p>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Alertas -->
            <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
                <div class="px-6 py-4 border-b border-slate-100 flex justify-between items-center bg-rose-50/60">
                    <div class="flex flex-col">
                        <h2 class="font-bold text-slate-800 text-sm flex items-center gap-2">
                            <i class="fas fa-bell text-rose-500"></i>
                            Alertas Prioritarias
                        </h2>
                        <p class="text-[11px] text-slate-400 mt-1">
                            Resumen de situaciones que requieren acción clínica.
                        </p>
                    </div>
                    <span class="text-xs font-bold bg-rose-100 text-rose-600 px-2 py-0.5 rounded-full">
                        Acción Requerida
                    </span>
                </div>
                <div class="p-6 space-y-3">
                    <% if (enRiesgo > 0) { %>
                        <div
                            class="flex items-start p-3 bg-white rounded-xl border-l-4 border-rose-500 shadow-sm group hover:bg-rose-50 transition-colors cursor-pointer"
                            title="Ir a monitoreo"
                            onclick="window.location.href='/dashboard/monitoring';"
                        >
                            <i class="fas fa-exclamation-circle text-rose-500 mt-1 mr-3 group-hover:scale-110 transition-transform"></i>
                            <div>
                                <p class="font-bold text-sm text-slate-800 group-hover:text-rose-800">
                                    Pacientes en estado crítico
                                </p>
                                <p class="text-xs text-slate-500 group-hover:text-rose-600">
                                    <%= enRiesgo %> paciente(s) con indicadores de riesgo alto o muy alto.
                                </p>
                            </div>
                        </div>
                    <% } else { %>
                        <p class="text-xs text-slate-400 text-center py-4">
                            No hay alertas activas en este momento.
                        </p>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- CONTROLES LISTA PACIENTES -->
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-4">
            <h2 class="text-lg font-bold text-slate-800 flex items-center gap-2">
                <i class="fas fa-folder-open text-indigo-500"></i>
                Expedientes Activos
            </h2>
            <% if (listaPacientes.length > 0) { %>
                <div class="flex flex-wrap gap-3 items-center">
                    <div class="relative">
                        <input
                            id="patientSearch"
                            type="text"
                            placeholder="Buscar paciente..."
                            class="pl-8 pr-3 py-2 rounded-xl border border-slate-200 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 bg-white"
                        />
                        <i class="fas fa-search text-slate-400 text-xs absolute left-2 top-1/2 -translate-y-1/2"></i>
                    </div>
                    <select
                        id="riskFilter"
                        class="px-3 py-2 rounded-xl border border-slate-200 text-sm bg-white focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                    >
                        <option value="all">Todos</option>
                        <option value="critical">Solo en riesgo</option>
                        <option value="stable">Solo estables</option>
                        <option value="nodata">Sin datos</option>
                    </select>
                </div>
            <% } %>
        </div>

        <!-- LISTA PACIENTES -->
        <% if (listaPacientes.length > 0) { %>
            <div id="patientsGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% listaPacientes.forEach(p => { %>
                    <%
                        const isCritical = p.ultima_valencia && p.ultima_valencia <= 2;
                        const hasData = !!p.ultima_valencia;
                        const cardBorder = isCritical ? 'border-rose-200 ring-1 ring-rose-100' : 'border-slate-100';
                        const statusColor = isCritical
                            ? 'bg-rose-100 text-rose-700'
                            : (hasData ? 'bg-emerald-100 text-emerald-700' : 'bg-slate-100 text-slate-500');
                        const statusText = isCritical
                            ? 'Atención Requerida'
                            : (hasData ? 'Estable' : 'Sin Datos');
                        const riskTag = isCritical ? 'critical' : (hasData ? 'stable' : 'nodata');
                        const sleepText = p.ultimo_sueno != null ? (p.ultimo_sueno + 'h de sueño') : 'Sueño no registrado';
                    %>

                    <div
                        class="patient-card bg-white rounded-2xl shadow-sm border <%= cardBorder %> hover:shadow-lg transition-all duration-300 flex flex-col relative overflow-hidden group"
                        data-name="<%= (p.nombre + ' ' + p.apellido).toLowerCase() %>"
                        data-risk="<%= riskTag %>"
                    >
                        <!-- CABECERA -->
                        <div class="p-6 pb-4 flex items-start justify-between">
                            <div class="flex items-center gap-4">
                                <div class="relative">
                                    <% if (p.foto_perfil) { %>
                                        <img src="<%= p.foto_perfil %>" alt="Avatar" class="h-14 w-14 rounded-2xl object-cover border border-slate-100">
                                    <% } else { %>
                                        <div class="h-14 w-14 rounded-2xl bg-slate-100 flex items-center justify-center text-slate-400 font-bold text-xl border border-slate-200">
                                            <%= p.nombre.charAt(0) %>
                                        </div>
                                    <% } %>
                                    <% if (isCritical) { %>
                                        <span class="absolute -top-1 -right-1 flex h-4 w-4">
                                            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-rose-400 opacity-75"></span>
                                            <span class="relative inline-flex rounded-full h-4 w-4 bg-rose-500 border-2 border-white"></span>
                                        </span>
                                    <% } %>
                                </div>
                                <div>
                                    <h3 class="font-bold text-slate-900 text-lg leading-tight group-hover:text-indigo-600 transition-colors">
                                        <%= p.nombre %> <%= p.apellido %>
                                    </h3>
                                    <p class="text-[11px] text-slate-400 mt-1 truncate max-w-[160px]">
                                        <%= p.email %>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- INFO -->
                        <div class="px-6 pb-3">
                            <div class="flex items-center justify-between p-3 bg-slate-50 rounded-xl gap-4">
                                <div>
                                    <p class="text-[10px] font-bold text-slate-400 uppercase">
                                        Último Check-in
                                    </p>
                                    <p class="text-xs font-bold text-slate-700 mt-0.5">
                                        <%= p.ultimo_checkin ? new Date(p.ultimo_checkin).toLocaleDateString() : '---' %>
                                    </p>
                                    <p class="text-[11px] text-slate-400 mt-0.5">
                                        <%= sleepText %>
                                    </p>
                                </div>
                                <div class="text-right">
                                    <span class="px-2 py-1 rounded-lg text-[10px] font-bold uppercase <%= statusColor %>">
                                        <%= statusText %>
                                    </span>
                                    <% if (p.ultima_valencia) { %>
                                        <p class="text-sm font-extrabold mt-0.5 <%= isCritical ? 'text-rose-600' : 'text-slate-700' %>">
                                            Ánimo: <%= p.ultima_valencia %>/5
                                        </p>
                                    <% } else { %>
                                        <p class="text-[11px] text-slate-400 mt-0.5">
                                            Sin registros recientes de ánimo.
                                        </p>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <!-- ACCIONES -->
                        <!-- ACCIONES -->
                        <div class="mt-auto px-6 py-3 border-t border-slate-50 space-y-2">
                            <!-- Fila 1: Chat + Monitoreo -->
                            <div class="flex items-center justify-between gap-2">
                                <a
                                    href="/dashboard/communication?chat=<%= p.id_paciente %>"
                                    class="flex-1 flex items-center justify-center gap-2 py-2 rounded-lg text-slate-500 hover:bg-slate-50 hover:text-indigo-600 text-xs font-bold transition-colors"
                                >
                                    <i class="far fa-comment-alt"></i> Chat
                                </a>
                                <a
                                    href="/dashboard/monitoring?patient=<%= p.id_paciente %>"
                                    class="flex-1 flex items-center justify-center gap-2 py-2 rounded-lg bg-indigo-50 text-indigo-700 hover:bg-indigo-600 hover:text-white text-xs font-bold transition-all shadow-sm"
                                >
                                    <i class="fas fa-chart-line"></i> Monitoreo
                                </a>
                            </div>

                            <!-- Fila 2: Expediente + PDF + Excel -->
                            <div class="flex items-center justify-between gap-2 text-[11px]">
                                <a
                                    href="/admin/pacientes/<%= p.id_paciente %>/expediente"
                                    class="flex-1 inline-flex items-center justify-center gap-1 px-2 py-1.5 rounded-lg border border-slate-200 text-slate-600 hover:bg-slate-50 hover:border-indigo-200 hover:text-indigo-600 font-semibold transition-all"
                                >
                                    <i class="fas fa-folder-open"></i>
                                    <span>Expediente</span>
                                </a>

                                <a
                                    href="/admin/pacientes/<%= p.id_paciente %>/reporte-pdf"
                                    target="_blank"
                                    class="inline-flex items-center justify-center gap-1 px-2 py-1.5 rounded-lg bg-rose-50 text-rose-600 border border-rose-200 hover:bg-rose-600 hover:text-white font-semibold transition-all"
                                >
                                    <i class="fas fa-file-pdf"></i>
                                    <span>PDF</span>
                                </a>

                                <a
                                    href="/admin/pacientes/<%= p.id_paciente %>/reporte-excel"
                                    target="_blank"
                                    class="inline-flex items-center justify-center gap-1 px-2 py-1.5 rounded-lg bg-emerald-50 text-emerald-600 border border-emerald-200 hover:bg-emerald-600 hover:text-white font-semibold transition-all"
                                >
                                    <i class="fas fa-file-excel"></i>
                                    <span>Excel</span>
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>

            <div class="text-center py-20 bg-white rounded-3xl border border-dashed border-slate-200">
                <div class="h-20 w-20 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4 text-slate-300 text-3xl">
                    <i class="fas fa-user-friends"></i>
                </div>
                <h3 class="text-lg font-bold text-slate-700">Sin pacientes asignados</h3>
                <p class="text-slate-400 text-sm mt-2 max-w-sm mx-auto">
                    Aún no tienes pacientes registrados en tu cartera. Comienza registrando un nuevo paciente para activar tu panel clínico.
                </p>
                <a
                    href="/dashboard/register-patient"
                    class="mt-6 inline-block bg-indigo-600 text-white px-6 py-2.5 rounded-xl text-sm font-bold hover:bg-indigo-700 transition-all"
                >
                    Registrar Primer Paciente
                </a>
            </div>

        <% } %>
    </div>
</div>

<script>
    // Etiqueta de "última actualización" en vivo
    (function () {
        const label = document.getElementById('lastSyncLabel');
        if (!label) return;
        const now = new Date();
        const timeText = now.toLocaleTimeString('es-BO', { hour: '2-digit', minute: '2-digit' });
        label.textContent = 'Actualizado a las ' + timeText;
    })();

    // Filtro en vivo de pacientes (nombre + riesgo)
    (function () {
        const searchInput = document.getElementById('patientSearch');
        const riskFilter = document.getElementById('riskFilter');
        const cards = document.querySelectorAll('.patient-card');

        if (!cards.length) return;

        function applyFilters() {
            const query = (searchInput?.value || '').toLowerCase().trim();
            const risk = riskFilter?.value || 'all';

            cards.forEach(card => {
                const name = card.getAttribute('data-name') || '';
                const cardRisk = card.getAttribute('data-risk') || 'nodata';

                const matchName = !query || name.includes(query);
                const matchRisk = risk === 'all' || risk === cardRisk;

                if (matchName && matchRisk) {
                    card.classList.remove('hidden');
                } else {
                    card.classList.add('hidden');
                }
            });
        }

        if (searchInput) {
            searchInput.addEventListener('input', applyFilters);
        }
        if (riskFilter) {
            riskFilter.addEventListener('change', applyFilters);
        }
    })();
</script>

<%- include('../partials/footer') %>
