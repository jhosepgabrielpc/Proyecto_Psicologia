<script>
    // Inyecci√≥n Segura de Datos
    const rawData = '<%- JSON.stringify(checkins || []) %>'; 
    const checkinData = JSON.parse(rawData).reverse();

    document.addEventListener('DOMContentLoaded', function() {
        const ctx = document.getElementById('moodChart');
        if (ctx && checkinData.length > 0) {
            
            // Gradiente para la gr√°fica
            const gradient = ctx.getContext('2d').createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, 'rgba(79, 70, 229, 0.2)');
            gradient.addColorStop(1, 'rgba(79, 70, 229, 0)');

            const last7 = checkinData.slice(-14); // Mostrar √∫ltimos 14 registros para m√°s contexto
            
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: last7.map(c => new Date(c.fecha_hora).toLocaleDateString('es-ES', {day: '2-digit', month:'short'})),
                    datasets: [{
                        label: 'Nivel de √Ånimo',
                        data: last7.map(c => c.valencia),
                        borderColor: '#4f46e5',
                        backgroundColor: gradient,
                        borderWidth: 3,
                        pointBackgroundColor: '#ffffff',
                        pointBorderColor: '#4f46e5',
                        pointBorderWidth: 2,
                        pointRadius: 4,
                        pointHoverRadius: 6,
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { 
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: '#1e293b',
                            padding: 10,
                            cornerRadius: 8,
                            displayColors: false,
                            callbacks: {
                                label: function(context) {
                                    return 'Nivel: ' + context.raw + '/5';
                                }
                            }
                        }
                    },
                    scales: { 
                        y: { 
                            min: 1, 
                            max: 5, 
                            ticks: { stepSize: 1, padding: 10, font: {size: 11} },
                            grid: { borderDash: [4, 4], color: '#e2e8f0' }
                        }, 
                        x: { 
                            grid: { display: false },
                            ticks: { font: {size: 10} }
                        } 
                    }
                }
            });
        }
    });

    function toggleModal(id) {
        const modal = document.getElementById(id);
        if (modal) {
            if (modal.classList.contains('hidden')) {
                modal.classList.remove('hidden');
                document.body.style.overflow = 'hidden'; // Evitar scroll
            } else {
                modal.classList.add('hidden');
                document.body.style.overflow = '';
            }
        }
    }

    // Actualizar label del slider
    function updateMoodLabel(val) {
        const labels = {1: 'P√©simo üòû', 2: 'Mal üòï', 3: 'Normal üòê', 4: 'Bien üôÇ', 5: 'Excelente üòÑ'};
        const colors = {1: 'text-rose-600', 2: 'text-orange-500', 3: 'text-slate-600', 4: 'text-blue-600', 5: 'text-emerald-600'};
        
        const el = document.getElementById('moodText');
        if(el) {
            el.innerText = labels[val] || 'Normal';
            // Reset classes
            el.className = "font-bold transition-colors duration-200 " + (colors[val] || 'text-indigo-600');
        }
    }
</script>

