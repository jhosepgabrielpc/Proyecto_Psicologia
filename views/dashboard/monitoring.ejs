                                                    <p class="text-xs text-slate-500 mt-2 bg-slate-50 p-2 rounded-lg italic border border-slate-100 inline-block">
                                                        "<%= c.notas %>"
                                                    </p>
                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="text-right">
                                            <div class="flex flex-col items-end">
                                                <span class="text-lg font-extrabold text-indigo-600"><%= c.valencia %>/5</span>
                                                <span class="text-[10px] font-bold text-slate-400 uppercase">√Ånimo</span>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <div class="p-12 text-center">
                                    <div class="inline-flex h-16 w-16 rounded-full bg-slate-50 items-center justify-center text-slate-300 mb-4">
                                        <i class="far fa-clipboard text-2xl"></i>
                                    </div>
                                    <p class="text-slate-500 text-sm">No hay registros disponibles.</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <div class="space-y-6">
                    <div class="bg-gradient-to-br from-indigo-600 to-violet-700 rounded-2xl p-6 text-white shadow-lg shadow-indigo-200 relative overflow-hidden">
                        <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-white/10 rounded-full blur-xl"></div>
                        
                        <h3 class="text-indigo-100 text-xs font-bold uppercase mb-2 flex items-center gap-2">
                            <i class="fas fa-calculator"></i> Promedio General
                        </h3>
                        <div class="flex items-end gap-2 mb-4">
                            <span class="text-6xl font-extrabold tracking-tight"><%= avgDisplay %></span>
                            <span class="text-indigo-200 text-xl font-medium mb-2">/ 5.0</span>
                        </div>
                        
                        <div class="relative pt-1">
                            <div class="overflow-hidden h-2 text-xs flex rounded-full bg-black/20">
                                <div style="width:<%= widthPercent %>%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-white transition-all duration-1000"></div>
                            </div>
                        </div>
                        
                        <p class="mt-4 text-sm font-medium text-indigo-50 bg-white/10 p-3 rounded-xl border border-white/10 flex items-start gap-2">
                            <i class="fas fa-info-circle mt-0.5"></i>
                            <%= message %>
                        </p>
                    </div>

                    <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100">
                        <h3 class="font-bold text-slate-800 mb-4 flex items-center justify-between">
                            <span><i class="fas fa-clipboard-check text-emerald-500 mr-2"></i> Evaluaciones</span>
                            <button class="text-xs text-indigo-600 font-bold hover:underline">Ver todo</button>
                        </h3>
                        
                        <div class="space-y-3">
                            <% if (tests.length > 0) { %>
                                <% tests.forEach(t => { %>
                                    <div class="flex justify-between items-center p-3 bg-slate-50 rounded-xl border border-slate-100 hover:border-indigo-200 transition-colors cursor-default">
                                        <div>
                                            <p class="text-xs font-bold text-slate-800"><%= t.tipo_test %></p>
                                            <p class="text-[10px] text-slate-400"><%= new Date(t.fecha_realizacion).toLocaleDateString() %></p>
                                        </div>
                                        <span class="text-xs font-bold px-2.5 py-1 rounded-lg bg-white border border-slate-200 text-slate-700 shadow-sm">
                                            <%= t.puntaje_total %> pts
                                        </span>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <div class="text-center py-8 border-2 border-dashed border-slate-100 rounded-xl">
                                    <p class="text-xs text-slate-400">Sin evaluaciones realizadas.</p>
                                    <% if (user.nombre_rol === 'Paciente') { %>
