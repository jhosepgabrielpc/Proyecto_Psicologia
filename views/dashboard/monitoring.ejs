                               class="flex-1 lg:flex-none inline-flex items-center justify-center px-4 py-2.5 border border-slate-200 shadow-sm text-sm font-bold rounded-xl text-slate-700 bg-white hover:bg-slate-50 hover:text-emerald-600 transition-all">
