        <% } else { %>
            <div class="min-h-[400px] flex flex-col items-center justify-center text-center p-8">
                <div class="h-24 w-24 bg-slate-100 rounded-full flex items-center justify-center text-slate-300 mb-6 text-4xl">
                    <i class="fas fa-user-slash"></i>
                </div>
