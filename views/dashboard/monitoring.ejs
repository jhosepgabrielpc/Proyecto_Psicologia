<%- include('../partials/header', { title: 'Monitoreo Cl√≠nico' }) %>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<% 
    // Variables Seguras
    const checkins = (locals.checkins && Array.isArray(locals.checkins)) ? locals.checkins : [];
    const tests = (locals.tests && Array.isArray(locals.tests)) ? locals.tests : [];
    const patientsList = (locals.patientsList && Array.isArray(locals.patientsList)) ? locals.patientsList : [];
    const viewingPatient = locals.viewingPatient || null;
    const user = locals.user || {};
    
    // Modos de Vista
    const isSelectionMode = (!viewingPatient && patientsList.length > 0);
    const isMonitoringMode = (viewingPatient || user.nombre_rol === 'Paciente');
    const hasData = checkins.length > 0;

    // C√°lculos para gr√°fica
    let avgValue = 0;
    let avgDisplay = "0.0";
    let widthPercent = 0;
    let message = "Sin datos suficientes.";

    if (hasData) {
        const sum = checkins.reduce((acc, curr) => acc + Number(curr.valencia), 0);
        avgValue = sum / checkins.length;
        avgDisplay = avgValue.toFixed(1);
        widthPercent = Math.round((avgValue / 5) * 100);
        if (avgValue >= 4) message = "Estado √≥ptimo. üåü";
        else if (avgValue >= 3) message = "Estado estable. ‚ú®";
        else message = "Requiere atenci√≥n. ‚ö†Ô∏è";
    }
%>

<div class="min-h-screen bg-slate-50 py-8 font-sans">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <% if (isSelectionMode) { %>
            
            <div class="mb-8">
                <h1 class="text-3xl font-extrabold text-slate-900">Panel de <span class="text-indigo-600">Pacientes</span></h1>
                <p class="text-slate-500 mt-2">Selecciona un paciente para ver su evoluci√≥n detallada.</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% patientsList.forEach(p => { %>
                    <a href="/dashboard/monitoring?patient=<%= p.id_paciente %>" class="group bg-white p-6 rounded-2xl shadow-sm border border-slate-100 hover:shadow-lg hover:-translate-y-1 transition-all">
                        <div class="flex items-center mb-4">
                            <div class="h-12 w-12 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-700 font-bold text-lg border border-indigo-200 group-hover:bg-indigo-600 group-hover:text-white transition-colors">
                                <%= p.nombre.charAt(0) %>
                            </div>
                            <div class="ml-4">
                                <h3 class="font-bold text-slate-800 text-lg group-hover:text-indigo-600 transition-colors"><%= p.nombre %> <%= p.apellido %></h3>
                                <p class="text-xs text-slate-500"><%= p.email %></p>
                            </div>
                        </div>
                        
                        <div class="flex justify-between items-center border-t border-slate-50 pt-4">
                            <div>
                                <p class="text-[10px] font-bold text-slate-400 uppercase">√öltimo Estado</p>
                                <% if (p.ultima_valencia) { %>
                                    <div class="flex items-center gap-1 mt-1">
                                        <span class="text-lg font-extrabold <%= p.ultima_valencia < 3 ? 'text-rose-500' : 'text-emerald-500' %>">
                                            <%= p.ultima_valencia %>/5
                                        </span>
                                        <span class="text-xs text-slate-400">
                                            (<%= new Date(p.ultimo_checkin).toLocaleDateString() %>)
                                        </span>
                                    </div>
                                <% } else { %>
                                    <p class="text-xs text-slate-400 mt-1">Sin registros</p>
                                <% } %>
                            </div>
                            <div class="h-8 w-8 rounded-full bg-slate-50 flex items-center justify-center text-slate-400 group-hover:bg-indigo-50 group-hover:text-indigo-600">
                                <i class="fas fa-chevron-right"></i>
                            </div>
                        </div>
                    </a>
                <% }); %>
            </div>

        <% } else if (isMonitoringMode) { %>
            
            <div class="mb-8 flex justify-between items-end">
                <div>
                    <a href="/dashboard/monitoring" class="text-xs font-bold text-slate-400 hover:text-indigo-600 mb-2 inline-block <%= user.nombre_rol === 'Paciente' ? 'hidden' : '' %>">
                        <i class="fas fa-arrow-left mr-1"></i> Volver a la lista
                    </a>
                    <h1 class="text-3xl font-extrabold text-slate-900">
                        <% if (viewingPatient) { %>
                            Paciente: <span class="text-indigo-600"><%= viewingPatient.nombre %> <%= viewingPatient.apellido %></span>
                        <% } else { %>
                            Tu Bienestar <span class="text-indigo-600">Emocional</span>
                        <% } %>
                    </h1>
                </div>
                <% if (user.nombre_rol === 'Paciente' && !viewingPatient) { %>
                    <button onclick="toggleModal('checkinModal')" class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-xl font-bold shadow-lg flex items-center gap-2 transition-all">
                        <i class="fas fa-plus-circle text-lg"></i> <span>Nuevo Registro</span>
                    </button>
                <% } %>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <div class="lg:col-span-2 space-y-8">
                    <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100">
                        <div class="flex justify-between items-center mb-6">
                            <h3 class="font-bold text-slate-800 text-lg">Evoluci√≥n de √Ånimo</h3>
                        </div>
                        <div class="relative h-80 w-full">
                            <% if (hasData) { %>
                                <canvas id="moodChart"></canvas>
                            <% } else { %>
                                <div class="h-full flex flex-col items-center justify-center text-slate-300 bg-slate-50/50 rounded-xl border-2 border-dashed border-slate-200">
                                    <p class="font-medium text-sm">Sin datos suficientes.</p>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
                        <div class="px-6 py-4 border-b border-slate-50 bg-slate-50/50 flex justify-between items-center">
                            <h3 class="font-bold text-slate-800">Historial Reciente</h3>
                            <span class="bg-indigo-100 text-indigo-700 text-xs font-bold px-2 py-1 rounded-lg"><%= checkins.length %></span>
                        </div>
                        <div class="divide-y divide-slate-50 max-h-[400px] overflow-y-auto">
                            <% if (hasData) { %>
                                <% checkins.forEach(c => { %>
                                    <div class="p-5 flex items-start justify-between hover:bg-slate-50 transition-colors">
                                        <div class="flex gap-4">
                                            <div class="flex-shrink-0 h-12 w-12 rounded-2xl flex items-center justify-center text-2xl shadow-sm border border-slate-100">
                                                <%= c.emocion_principal && c.emocion_principal.includes('Feliz') ? 'üòÑ' : 'üòê' %>
                                            </div>
                                            <div>
                                                <h4 class="text-sm font-bold text-slate-900"><%= c.emocion_principal %></h4>
                                                <p class="text-xs text-slate-400 mt-0.5"><%= new Date(c.fecha_hora).toLocaleDateString() %></p>
                                            </div>
                                        </div>
                                        <div class="text-right">
                                            <span class="text-lg font-extrabold text-indigo-600"><%= c.valencia %>/5</span>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <div class="p-10 text-center text-slate-500">No hay registros.</div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <div class="space-y-6">
                    <div class="bg-gradient-to-br from-indigo-600 to-violet-700 rounded-2xl p-6 text-white shadow-lg relative overflow-hidden">
                        <h3 class="text-indigo-100 text-xs font-bold uppercase mb-1">Promedio General</h3>
                        <div class="flex items-baseline gap-2">
                            <span class="text-5xl font-extrabold"><%= avgDisplay %></span>
                            <span class="text-indigo-200 text-lg font-medium">/ 5.0</span>
                        </div>
                        <div class="mt-4 h-2 bg-black/20 rounded-full overflow-hidden">
                            <div class="bg-white h-full rounded-full transition-all duration-1000" style="width: <%= widthPercent %>%"></div>
                        </div>
                        <p class="mt-4 text-sm text-indigo-50 pt-3 border-t border-white/10"><%= message %></p>
                    </div>

                    <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100">
                        <h3 class="font-bold text-slate-800 mb-4">Evaluaciones</h3>
                        <div class="space-y-3">
                            <% if (tests.length > 0) { %>
                                <% tests.forEach(t => { %>
                                    <div class="flex justify-between items-center p-3 bg-slate-50 rounded-xl border border-slate-100">
                                        <div><p class="text-xs font-bold text-slate-700"><%= t.tipo_test %></p></div>
                                        <span class="text-xs font-bold px-2 py-1 rounded-lg bg-slate-200 text-slate-700"><%= t.puntaje_total %> pts</span>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <div class="text-center py-4 border-2 border-dashed border-slate-100 rounded-xl"><p class="text-xs text-slate-400">Sin datos.</p></div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

        <% } else { %>
            <div class="p-12 text-center text-slate-400">
                <h2 class="text-xl font-bold">Bienvenido al Panel de Monitoreo</h2>
                <p>No hay datos para mostrar en este momento.</p>
            </div>
        <% } %>
        
    </div>
</div>

<% if (user.nombre_rol === 'Paciente' && !viewingPatient) { %>
<div id="checkinModal" class="hidden fixed inset-0 bg-slate-900/60 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md">
        <div class="bg-indigo-600 p-6 text-white flex justify-between items-start rounded-t-2xl">
            <h3 class="text-xl font-bold">Registrar Estado</h3>
            <button onclick="toggleModal('checkinModal')" class="text-white/70 hover:text-white"><i class="fas fa-times text-xl"></i></button>
        </div>
        <form action="/dashboard/monitoring/checkin" method="POST" class="p-6 space-y-6">
            <div>
                <label class="text-sm font-bold text-slate-700 mb-2 block">Nivel (1-5)</label>
                <input type="range" name="valencia" min="1" max="5" step="1" value="3" class="w-full h-2 bg-slate-200 rounded-lg accent-indigo-600" oninput="updateMoodLabel(this.value)">
                <div class="flex justify-between text-xs text-slate-400 mt-1 font-bold uppercase"><span>Mal</span><span id="moodText" class="text-indigo-600 font-bold">Normal</span><span>Bien</span></div>
            </div>
            <div>
                <label class="block text-sm font-bold text-slate-700 mb-3">Emoci√≥n</label>
                <div class="grid grid-cols-3 gap-3">
                    <% const emojis = {Feliz:'üòÑ', Ansioso:'üò∞', Triste:'üò¢', Enojado:'üò†', Calmado:'üòå', Cansado:'üò¥'}; %>
                    <% Object.keys(emojis).forEach(emo => { %>
                        <label class="cursor-pointer group">
                            <input type="radio" name="emocion" value="<%= emo %>" class="peer sr-only">
                            <div class="peer-checked:bg-indigo-50 peer-checked:border-indigo-500 peer-checked:text-indigo-700 border-2 border-slate-100 rounded-xl p-2 text-center hover:border-slate-300 transition-all">
                                <div class="text-xl"><%= emojis[emo] %></div>
                                <span class="text-xs font-bold"><%= emo %></span>
                            </div>
                        </label>
                    <% }); %>
                </div>
            </div>
            <div>
                <label class="block text-sm font-bold text-slate-700 mb-2">Notas</label>
                <textarea name="notas" rows="3" class="w-full rounded-xl border-slate-200 text-sm focus:ring-indigo-500 resize-none"></textarea>
            </div>
            <button type="submit" class="w-full bg-indigo-600 text-white font-bold py-3.5 rounded-xl hover:bg-indigo-700 shadow-lg">Guardar</button>
        </form>
    </div>
</div>
<% } %>

<script>
    // Inyecci√≥n Segura de Datos
    const rawData = '<%- JSON.stringify(checkins || []) %>'; 
    const checkinData = JSON.parse(rawData).reverse();

    document.addEventListener('DOMContentLoaded', function() {
        const ctx = document.getElementById('moodChart');
        if (ctx && checkinData.length > 0) {
            const last7 = checkinData.slice(-7);
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: last7.map(c => new Date(c.fecha_hora).toLocaleDateString('es-ES', {weekday:'short'})),
                    datasets: [{
                        label: '√Ånimo',
                        data: last7.map(c => c.valencia),
                        borderColor: '#4f46e5',
                        backgroundColor: 'rgba(79, 70, 229, 0.1)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: { y: { min: 1, max: 5, ticks: { stepSize: 1 } }, x: { grid: { display: false } } }
                }
            });
        }
    });

    function toggleModal(id) {
        const modal = document.getElementById(id);
        if (modal) {
            if (modal.classList.contains('hidden')) modal.classList.remove('hidden');
            else modal.classList.add('hidden');
        }
    }

    // Funci√≥n faltante para el slider
    function updateMoodLabel(val) {
        const labels = {1: 'P√©simo', 2: 'Mal', 3: 'Normal', 4: 'Bien', 5: 'Excelente'};
        const el = document.getElementById('moodText');
        if(el) el.innerText = labels[val] || 'Normal';
    }
</script>

<%- include('../partials/footer') %>