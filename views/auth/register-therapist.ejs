<%- include('../partials/header', { title: 'Portal Profesional' }) %>

<div class="min-h-screen bg-slate-900 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 font-sans relative overflow-hidden">
    <div class="absolute top-0 right-0 w-96 h-96 bg-teal-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>

    <div class="max-w-2xl w-full space-y-8 relative z-10">
        
        <div class="text-center">
            <h2 class="text-3xl font-extrabold text-white tracking-tight flex justify-center items-center gap-3">
                <i class="fas fa-user-md text-teal-400"></i> Portal de Especialistas
            </h2>
            <p class="mt-2 text-slate-400">Registro exclusivo para personal médico autorizado.</p>
        </div>

        <div class="bg-slate-800/80 backdrop-blur-md rounded-3xl shadow-2xl p-8 sm:p-10 border border-slate-700">
            
            <% if (locals.errors && errors.length > 0) { %>
                <div class="bg-rose-500/10 border border-rose-500/50 text-rose-400 p-4 rounded-xl mb-6">
                    <div class="flex items-center gap-2 mb-2">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span class="font-bold">Atención:</span>
                    </div>
                    <ul class="list-disc list-inside text-xs space-y-1">
                        <% errors.forEach(function(error) { %>
                            <li><%= error.msg %></li>
                        <% }); %>
                    </ul>
                </div>
            <% } %>

            <form class="space-y-5" action="/auth/register-pro" method="POST">
                
                <div class="grid grid-cols-2 gap-5">
                    <div>
                        <label class="block text-xs font-bold text-slate-400 uppercase mb-1">Nombre</label>
                        <input name="nombre" type="text" required value="<%= locals.formData ? formData.nombre : '' %>" class="w-full px-4 py-3 bg-slate-900 border border-slate-600 rounded-xl focus:border-teal-500 focus:ring-1 focus:ring-teal-500 outline-none text-white placeholder-slate-600" placeholder="Dr. Nombre">
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-slate-400 uppercase mb-1">Apellido</label>
                        <input name="apellido" type="text" required value="<%= locals.formData ? formData.apellido : '' %>" class="w-full px-4 py-3 bg-slate-900 border border-slate-600 rounded-xl focus:border-teal-500 focus:ring-1 focus:ring-teal-500 outline-none text-white" placeholder="Apellido">
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-5">
                    <div>
                        <label class="block text-xs font-bold text-slate-400 uppercase mb-1">Móvil (8 dígitos)</label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-500 font-bold text-xs">+591</span>
                            <input name="telefono" type="tel" required value="<%= locals.formData ? formData.telefono : '' %>" class="w-full pl-12 pr-4 py-3 bg-slate-900 border border-slate-600 rounded-xl focus:border-teal-500 focus:ring-1 focus:ring-teal-500 outline-none text-white" placeholder="70000000">
                        </div>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-slate-400 uppercase mb-1">Fecha Nacimiento</label>
                        <input name="fecha_nacimiento" type="date" required value="<%= locals.formData ? formData.fecha_nacimiento : '' %>" class="w-full px-4 py-3 bg-slate-900 border border-slate-600 rounded-xl focus:border-teal-500 focus:ring-1 focus:ring-teal-500 outline-none text-white text-sm">
                    </div>
                </div>

                <div class="bg-slate-900/50 p-5 rounded-2xl border border-slate-700/50">
                    <h3 class="text-teal-400 text-xs font-extrabold uppercase mb-4 border-b border-slate-700 pb-2">Credenciales</h3>
                    <div class="grid grid-cols-2 gap-5">
                        <div>
                            <label class="block text-xs font-bold text-slate-500 mb-1">Especialidad</label>
                            <select name="especialidad" class="w-full px-4 py-3 bg-slate-800 border border-slate-600 rounded-xl focus:border-teal-500 outline-none text-white">
                                <option>Psicología Clínica</option>
                                <option>Psiquiatría</option>
                                <option>Neuropsicología</option>
                                <option>Terapia Familiar</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-slate-500 mb-1">Nº Licencia</label>
                            <input name="licencia" type="text" required value="<%= locals.formData ? formData.licencia : '' %>" class="w-full px-4 py-3 bg-slate-800 border border-slate-600 rounded-xl focus:border-teal-500 outline-none text-white" placeholder="Ej: LP-998877">
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 gap-4">
                    <div>
                        <label class="block text-xs font-bold text-slate-400 uppercase mb-1">Correo Institucional</label>
                        <input name="email" type="email" required value="<%= locals.formData ? formData.email : '' %>" class="w-full px-4 py-3 bg-slate-900 border border-slate-600 rounded-xl focus:border-teal-500 focus:ring-1 focus:ring-teal-500 outline-none text-white" placeholder="doctor@mindcare.bo">
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-slate-400 uppercase mb-1">Contraseña</label>
                        <input name="password" type="password" required class="w-full px-4 py-3 bg-slate-900 border border-slate-600 rounded-xl focus:border-teal-500 focus:ring-1 focus:ring-teal-500 outline-none text-white" placeholder="••••••••">
                        <p class="text-[10px] text-slate-500 mt-1 text-right">Mín. 8 caracteres, 1 especial.</p>
                    </div>
                </div>

                <div class="pt-4 border-t border-slate-700">
                    <label class="block text-xs font-bold text-rose-400 uppercase mb-2 flex justify-between">
                        <span>Código de Acceso Maestro</span>
                        <i class="fas fa-lock"></i>
                    </label>
                    <input name="codigo_acceso" type="password" required class="w-full px-4 py-3 bg-slate-900 border border-rose-900/50 rounded-xl focus:border-rose-500 focus:ring-1 focus:ring-rose-500 outline-none text-white placeholder-rose-900/50 tracking-widest text-center font-mono" placeholder="CÓDIGO REQUERIDO">
                </div>

                <button type="submit" class="w-full bg-teal-600 hover:bg-teal-500 text-white font-bold py-4 rounded-xl shadow-lg shadow-teal-900/20 transition-all transform active:scale-[0.98]">
                    Validar y Registrar Profesional
                </button>
            </form>
        </div>
        
        <div class="text-center">
            <a href="/auth/register" class="text-slate-500 text-sm hover:text-white transition-colors font-medium">← Soy paciente, volver al registro público</a>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>