<%- include('../partials/header', { title: 'Expediente Clínico - MindCare' }) %>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<style>
    body { margin: 0; padding: 0; }
    .app-wrapper {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }
    .app-content {
        flex: 1;
        position: relative;
        z-index: 10;
    }
    .card-hover {
        transition: all 0.25s ease;
    }
    .card-hover:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 30px -10px rgba(15, 23, 42, 0.18);
    }
</style>

<div class="app-wrapper bg-slate-50 font-sans">

    <div class="app-content relative">
        <!-- Fondo decorativo -->
        <div class="absolute inset-0 -z-10 overflow-hidden pointer-events-none">
            <div class="absolute top-0 left-0 right-0 h-[400px] bg-gradient-to-b from-indigo-100/60 via-white/40 to-slate-50"></div>
            <div class="absolute top-[-120px] right-[-120px] w-[520px] h-[520px] bg-purple-200/40 rounded-full mix-blend-multiply filter blur-[110px] opacity-70"></div>
            <div class="absolute top-[160px] left-[-120px] w-[480px] h-[480px] bg-blue-200/40 rounded-full mix-blend-multiply filter blur-[110px] opacity-60"></div>
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">

            <!-- ENCABEZADO -->
            <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-6 mb-10">
                <div>
                    <div class="inline-flex items-center gap-2 px-3 py-1 bg-white/80 backdrop-blur rounded-full border border-indigo-100 shadow-sm mb-3">
                        <span class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></span>
                        <span class="text-[10px] font-black text-indigo-600 uppercase tracking-widest">
                            Expediente Clínico
                        </span>
                    </div>
                    <h1 class="text-3xl md:text-4xl font-black text-slate-900 tracking-tight flex items-center gap-3">
                        <img src="<%= patient.foto_perfil || ('https://ui-avatars.com/api/?name='+patient.nombre+'+'+patient.apellido+'&background=6366f1&color=fff') %>"
                             class="w-12 h-12 rounded-2xl border-2 border-white shadow-md object-cover">
                        <span><%= patient.nombre %> <%= patient.apellido %></span>
                    </h1>
                    <p class="text-slate-500 mt-2 text-sm md:text-base max-w-2xl">
                        Resumen integral de la evolución clínica, sesiones, reportes y registros emocionales del paciente.
                    </p>
                </div>

                <div class="flex flex-col items-stretch gap-3 w-full md:w-auto">
                    <div class="bg-white/80 backdrop-blur rounded-2xl border border-slate-200 px-4 py-3 flex items-center justify-between gap-4">
                        <div>
                            <p class="text-[10px] font-bold text-slate-400 uppercase tracking-wider">Terapeuta</p>
                            <p class="text-sm font-bold text-slate-800">Dr(a). <%= user.apellido %></p>
                        </div>
                        <div class="text-right">
                            <p class="text-[10px] font-bold text-slate-400 uppercase tracking-wider">Última actualización</p>
                            <p class="text-xs font-medium text-slate-600"><%= new Date().toLocaleString('es-ES') %></p>
                        </div>
                    </div>

                    <div class="flex gap-2 justify-end">
                        <a href="/reports/patient/<%= patient.id_paciente %>/create-report"
                           class="bg-white text-slate-800 px-4 py-2 rounded-xl text-xs font-bold border border-slate-200 hover:bg-slate-50 shadow-sm flex items-center gap-2">
                            <i class="fas fa-file-medical-alt text-indigo-500"></i>
                            Nuevo Reporte
                        </a>
                        <a href="/dashboard/clinical"
                           class="bg-slate-900 text-white px-4 py-2 rounded-xl text-xs font-bold hover:bg-slate-800 shadow-md flex items-center gap-2">
                            <i class="fas fa-arrow-left"></i>
                            Volver
                        </a>
                    </div>
                </div>
            </div>

            <!-- RESUMEN SUPERIOR -->
            <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 mb-10">
                <!-- Ficha rápida -->
                <div class="bg-white rounded-2xl border border-slate-100 shadow-sm p-6 space-y-4 card-hover">
                    <div class="flex items-center justify-between">
                        <h2 class="text-xs font-bold text-slate-400 uppercase tracking-wider">Datos del Paciente</h2>
                        <span class="px-2.5 py-0.5 rounded-full text-[10px] font-bold
                            <%= patient.estado_tratamiento === 'activo' ? 'bg-emerald-100 text-emerald-700' : 'bg-slate-100 text-slate-500' %>">
                            <%= (patient.estado_tratamiento || '').toUpperCase() %>
                        </span>
                    </div>
                    <div class="space-y-2 text-sm text-slate-600">
                        <p class="flex items-center gap-2">
                            <i class="fas fa-envelope text-slate-400 w-4"></i>
                            <span><%= patient.email %></span>
                        </p>
                        <% if (patient.telefono) { %>
                        <p class="flex items-center gap-2">
                            <i class="fas fa-phone-alt text-slate-400 w-4"></i>
                            <span><%= patient.telefono %></span>
                        </p>
                        <% } %>
                        <p class="flex items-center gap-2">
                            <i class="fas fa-calendar-plus text-slate-400 w-4"></i>
                            <span>Registro: <%= new Date(patient.fecha_registro).toLocaleDateString('es-ES') %></span>
                        </p>
                        <% if (patient.ultimo_login) { %>
                        <p class="flex items-center gap-2">
                            <i class="fas fa-clock text-slate-400 w-4"></i>
                            <span>Último acceso: <%= new Date(patient.ultimo_login).toLocaleString('es-ES') %></span>
                        </p>
                        <% } %>
                    </div>
                </div>

                <!-- KPI: estado emocional -->
                <div class="bg-white rounded-2xl border border-slate-100 shadow-sm p-6 flex flex-col justify-between card-hover">
                    <div class="flex items-center justify-between mb-4">
                        <p class="text-xs font-bold text-slate-400 uppercase tracking-wider">Estado Emocional</p>
                        <i class="fas fa-heart-pulse text-rose-400"></i>
                    </div>
                    <div class="flex items-end justify-between">
                        <div>
                            <p class="text-3xl font-black text-slate-900">
                                <%= Number(moodStats.promedio_animo || 0).toFixed(1) %> / 5
                            </p>
                            <p class="text-xs text-slate-400 mt-1">Promedio últimos registros</p>
                        </div>
                        <div class="text-right">
                            <p class="text-2xl font-black text-indigo-600"><%= moodStats.total_registros || 0 %></p>
                            <p class="text-xs text-slate-400">Check-ins totales</p>
                        </div>
                    </div>
                </div>

                <!-- KPI: sesiones -->
                <div class="bg-white rounded-2xl border border-slate-100 shadow-sm p-6 flex flex-col justify-between card-hover">
                    <div class="flex items-center justify-between mb-4">
                        <p class="text-xs font-bold text-slate-400 uppercase tracking-wider">Sesiones</p>
                        <i class="fas fa-user-md text-emerald-500"></i>
                    </div>
                    <div class="flex items-end justify-between">
                        <div>
                            <p class="text-3xl font-black text-slate-900"><%= sessions.length %></p>
                            <p class="text-xs text-slate-400 mt-1">Sesiones realizadas</p>
                        </div>
                        <% if (sessions.length > 0) { %>
                        <div class="text-right text-xs text-slate-500">
                            <p class="font-semibold">Última:</p>
                            <p><%= new Date(sessions[0].fecha_hora_inicio).toLocaleDateString('es-ES') %></p>
                        </div>
                        <% } %>
                    </div>
                </div>

                <!-- KPI: reportes/tests -->
                <div class="bg-white rounded-2xl border border-slate-100 shadow-sm p-6 flex flex-col justify-between card-hover">
                    <div class="flex items-center justify-between mb-4">
                        <p class="text-xs font-bold text-slate-400 uppercase tracking-wider">Documentos</p>
                        <i class="fas fa-folder-open text-indigo-500"></i>
                    </div>
                    <div class="flex items-end justify-between">
                        <div>
                            <p class="text-3xl font-black text-slate-900"><%= reports.length %></p>
                            <p class="text-xs text-slate-400 mt-1">Reportes clínicos</p>
                        </div>
                        <div class="text-right">
                            <p class="text-2xl font-black text-slate-900"><%= tests.length %></p>
                            <p class="text-xs text-slate-400 mt-1">Tests aplicados</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- CUERPO PRINCIPAL -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-10">

                <!-- Columna izquierda (gráfico + notas) -->
                <div class="lg:col-span-2 space-y-8">

                    <!-- Evolución emocional -->
                    <div class="bg-white rounded-3xl shadow-sm border border-slate-100 p-6 card-hover">
                        <div class="flex items-center justify-between mb-6">
                            <div>
                                <h3 class="font-bold text-slate-800 flex items-center gap-2">
                                    <span class="w-1 h-5 bg-indigo-500 rounded-full"></span>
                                    Evolución emocional reciente
                                </h3>
                                <p class="text-xs text-slate-400 mt-1">
                                    Últimos <%= checkins.length %> registros de check-in emocional.
                                </p>
                            </div>
                            <span class="text-[10px] px-2 py-1 rounded-full bg-slate-100 text-slate-500 font-bold uppercase tracking-wider">
                                ESCALA 1–5
                            </span>
                        </div>

                        <div id="chartData"
                             data-checkins='<%- JSON.stringify(checkins || []) %>'
                             style="display:none;"></div>

                        <div class="relative h-64 w-full">
                            <canvas id="patientMoodChart"></canvas>
                        </div>
                    </div>

                    <!-- Sesiones -->
                    <div class="bg-white rounded-3xl shadow-sm border border-slate-100 p-6 card-hover">
                        <div class="flex items-center justify-between mb-4">
                            <h3 class="font-bold text-slate-800 flex items-center gap-2">
                                <i class="fas fa-list-ul text-indigo-500"></i>
                                Historial de sesiones
                            </h3>
                            <span class="text-xs text-slate-400">
                                <%= sessions.length %> registro(s)
                            </span>
                        </div>

                        <% if (sessions.length === 0) { %>
                            <div class="py-10 text-center text-slate-400 text-sm">
                                No hay sesiones registradas todavía.
                            </div>
                        <% } else { %>
                            <div class="overflow-x-auto">
                                <table class="w-full text-sm text-slate-600">
                                    <thead>
                                        <tr class="text-[11px] uppercase tracking-wider text-slate-400 border-b border-slate-100">
                                            <th class="py-2 text-left">Fecha</th>
                                            <th class="py-2 text-left">Hora</th>
                                            <th class="py-2 text-left">Modalidad</th>
                                            <th class="py-2 text-left">Estado</th>
                                            <th class="py-2 text-left">Calidad</th>
                                        </tr>
                                    </thead>
                                    <tbody class="divide-y divide-slate-50">
                                        <% sessions.forEach(s => { %>
                                            <tr class="hover:bg-slate-50">
                                                <td class="py-2">
                                                    <%= new Date(s.fecha_hora_inicio).toLocaleDateString('es-ES') %>
                                                </td>
                                                <td class="py-2">
                                                    <%= new Date(s.fecha_hora_inicio).toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'}) %>
                                                </td>
                                                <td class="py-2">
                                                    <span class="px-2 py-0.5 rounded-full text-[11px] font-semibold
                                                        <%= s.modalidad === 'Virtual' ? 'bg-indigo-50 text-indigo-700' : 'bg-emerald-50 text-emerald-700' %>">
                                                        <%= s.modalidad %>
                                                    </span>
                                                </td>
                                                <td class="py-2">
                                                    <span class="px-2 py-0.5 rounded-full text-[11px] font-semibold
                                                        <%= s.estado === 'Completada' ? 'bg-emerald-50 text-emerald-700' : 'bg-amber-50 text-amber-700' %>">
                                                        <%= s.estado %>
                                                    </span>
                                                </td>
                                                <td class="py-2 text-xs text-slate-500">
                                                    <%= s.calidad_sesion %>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>

                </div>

                <!-- Columna derecha (reportes + tests) -->
                <div class="lg:col-span-1 space-y-6">

                    <!-- Reportes -->
                    <div class="bg-white rounded-3xl shadow-sm border border-slate-100 p-6 card-hover">
                        <div class="flex items-center justify-between mb-3">
                            <h3 class="text-sm font-bold text-slate-800 flex items-center gap-2">
                                <i class="fas fa-file-medical text-indigo-500"></i>
                                Reportes clínicos
                            </h3>
                            <span class="text-xs text-slate-400">
                                <%= reports.length %> total
                            </span>
                        </div>

                        <% if (reports.length === 0) { %>
                            <p class="text-xs text-slate-400 italic py-4">
                                Aún no se han generado reportes para este paciente.
                            </p>
                        <% } else { %>
                            <div class="space-y-3 max-h-72 overflow-y-auto pr-1">
                                <% reports.forEach(r => { %>
                                    <div class="border border-slate-100 rounded-2xl p-3 bg-slate-50/60 hover:bg-slate-50">
                                        <div class="flex justify-between items-center">
                                            <div>
                                                <p class="text-xs font-semibold text-slate-700">
                                                    <%= r.tipo_reporte || 'Reporte de progreso' %>
                                                </p>
                                                <p class="text-[11px] text-slate-400 mt-0.5">
                                                    <%= r.periodo_inicio ? new Date(r.periodo_inicio).toLocaleDateString('es-ES') : '?' %>
                                                    –
                                                    <%= r.periodo_fin ? new Date(r.periodo_fin).toLocaleDateString('es-ES') : '?' %>
                                                </p>
                                            </div>
                                            <span class="text-[11px] text-slate-400">
                                                <%= new Date(r.fecha_generacion).toLocaleDateString('es-ES') %>
                                            </span>
                                        </div>
                                        <% if (r.resumen_evolucion) { %>
                                            <p class="text-[11px] text-slate-500 mt-2 line-clamp-3">
                                                <%= r.resumen_evolucion %>
                                            </p>
                                        <% } %>
                                    </div>
                                <% }) %>
                            </div>
                        <% } %>
                    </div>

                    <!-- Tests -->
                    <div class="bg-white rounded-3xl shadow-sm border border-slate-100 p-6 card-hover">
                        <div class="flex items-center justify-between mb-3">
                            <h3 class="text-sm font-bold text-slate-800 flex items-center gap-2">
                                <i class="fas fa-clipboard-check text-emerald-500"></i>
                                Tests psicométricos
                            </h3>
                            <span class="text-xs text-slate-400">
                                <%= tests.length %> aplicado(s)
                            </span>
                        </div>

                        <% if (tests.length === 0) { %>
                            <p class="text-xs text-slate-400 italic py-4">
                                No hay tests registrados para este paciente.
                            </p>
                        <% } else { %>
                            <ul class="space-y-3 max-h-64 overflow-y-auto pr-1">
                                <% tests.forEach(t => { %>
                                    <li class="flex items-center justify-between border border-slate-100 rounded-2xl px-3 py-2 bg-slate-50/70">
                                        <div>
                                            <p class="text-xs font-semibold text-slate-700">
                                                <%= t.nombre_escala %>
                                            </p>
                                            <p class="text-[11px] text-slate-400">
                                                <%= new Date(t.fecha_completacion).toLocaleDateString('es-ES') %>
                                            </p>
                                        </div>
                                    </li>
                                <% }) %>
                            </ul>
                        <% } %>
                    </div>

                </div>
            </div>

        </div>
    </div>

    <%- include('../partials/footer') %>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        try {
            const chartDiv = document.getElementById('chartData');
            if (!chartDiv) return;

            const raw = chartDiv.getAttribute('data-checkins') || '[]';
            const data = JSON.parse(raw).reverse(); // más antiguo → primero

            const canvas = document.getElementById('patientMoodChart');
            if (!canvas) return;

            if (data.length === 0) {
                canvas.parentNode.innerHTML =
                    '<div class="h-full flex items-center justify-center text-slate-300 text-sm">Sin datos suficientes para graficar.</div>';
                return;
            }

            const ctx = canvas.getContext('2d');
            const labels = data.map(d =>
                new Date(d.fecha_hora).toLocaleDateString('es-ES', { day: '2-digit', month: 'short' })
            );
            const values = data.map(d => d.valencia);

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Nivel de ánimo',
                        data: values,
                        borderColor: '#6366f1',
                        borderWidth: 2.5,
                        pointRadius: 4,
                        pointBackgroundColor: '#ffffff',
                        pointBorderColor: '#6366f1',
                        pointBorderWidth: 2,
                        fill: true,
                        backgroundColor: function (context) {
                            const c = context.chart.ctx;
                            const gradient = c.createLinearGradient(0, 0, 0, 260);
                            gradient.addColorStop(0, 'rgba(99, 102, 241, 0.25)');
                            gradient.addColorStop(1, 'rgba(99, 102, 241, 0)');
                            return gradient;
                        },
                        tension: 0.35
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            min: 1,
                            max: 5,
                            ticks: {
                                stepSize: 1
                            },
                            grid: {
                                color: '#e5e7eb',
                                borderDash: [6, 6]
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            },
                            ticks: {
                                color: '#94a3b8',
                                font: {
                                    size: 11
                                }
                            }
                        }
                    }
                }
            });
        } catch (e) {
            console.error('Error al renderizar gráfico de paciente:', e);
        }
    });
</script>
