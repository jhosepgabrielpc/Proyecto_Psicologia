<%- include('../partials/header', { title: 'Expediente Clínico - ' + patient.nombre }) %>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<style>
    @media print {
        .no-print { display: none !important; }
        body { background: white; font-size: 12pt; }
        .shadow-sm, .shadow-lg { box-shadow: none !important; border: 1px solid #ddd; }
        .bg-slate-50 { background: white !important; }
        .text-white { color: #000 !important; }
        canvas { max-height: 300px !important; }
    }
    .tab-active { border-bottom: 2px solid #4f46e5; color: #4f46e5; background: rgba(79, 70, 229, 0.05); }
    .tab-inactive { color: #64748b; }
    .animate-fade-in { animation: fadeIn 0.5s ease-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>

<div class="min-h-screen bg-slate-50 py-8 font-sans">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <nav class="flex mb-6 text-sm font-medium text-slate-500 no-print">
            <a href="/dashboard/clinical" class="hover:text-indigo-600 transition-colors flex items-center">
                <i class="fas fa-columns mr-2"></i>Centro de Comando
            </a>
            <span class="mx-2 text-slate-300">/</span>
            <span class="text-indigo-600 font-bold">Expediente #<%= patient.id_paciente %></span>
        </nav>

        <div class="bg-white rounded-2xl shadow-lg border border-slate-100 p-6 mb-8 flex flex-col md:flex-row justify-between items-start md:items-center gap-6 relative overflow-hidden animate-fade-in">
            <div class="absolute top-0 left-0 w-2 h-full <%= patient.estado_tratamiento === 'activo' ? 'bg-emerald-500' : 'bg-slate-300' %>"></div>
            
            <div class="flex items-center gap-6 pl-4">
                <div class="relative">
                    <img src="<%= patient.foto_perfil || 'https://ui-avatars.com/api/?name='+patient.nombre+'+'+patient.apellido+'&background=6366f1&color=fff&size=128' %>" 
                         class="w-24 h-24 rounded-2xl object-cover shadow-md border-4 border-white">
                    <span class="absolute -bottom-3 -right-3 text-[10px] font-black px-2 py-1 rounded-lg uppercase tracking-wide shadow-sm border-2 border-white 
                        <%= patient.estado_tratamiento === 'activo' ? 'bg-emerald-100 text-emerald-700' : 'bg-slate-100 text-slate-600' %>">
                        <%= patient.estado_tratamiento %>
                    </span>
                </div>
                <div>
                    <h1 class="text-3xl font-black text-slate-800 tracking-tight"><%= patient.nombre %> <%= patient.apellido %></h1>
                    <div class="flex flex-wrap gap-4 mt-2 text-sm text-slate-500">
                        <span class="flex items-center gap-2 bg-slate-50 px-3 py-1 rounded-lg border border-slate-100">
                            <i class="far fa-envelope text-indigo-400"></i> <%= patient.email %>
                        </span>
                        <span class="flex items-center gap-2 bg-slate-50 px-3 py-1 rounded-lg border border-slate-100">
                            <i class="fas fa-phone-alt text-indigo-400"></i> <%= patient.telefono || 'Sin registrar' %>
                        </span>
                    </div>
                </div>
            </div>

            <div class="flex gap-3 no-print">
                <a href="/reports/patient/<%= patient.id_paciente %>/create-report" class="bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2.5 rounded-xl font-bold shadow-lg shadow-indigo-200 transition-all flex items-center gap-2 transform hover:-translate-y-0.5">
                    <i class="fas fa-file-medical"></i> Nuevo Reporte
                </a>
                <button onclick="window.print()" class="bg-white text-slate-600 border border-slate-200 px-4 py-2.5 rounded-xl font-bold hover:bg-slate-50 transition shadow-sm flex items-center gap-2">
                    <i class="fas fa-print"></i>
                </button>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            
            <div class="lg:col-span-1 space-y-6 animate-fade-in" style="animation-delay: 0.1s">
                
                <div class="bg-gradient-to-br from-indigo-600 to-violet-700 rounded-2xl p-6 text-white shadow-lg relative overflow-hidden">
                    <div class="absolute right-0 top-0 opacity-10 transform translate-x-4 -translate-y-4">
                        <i class="fas fa-heart-pulse text-9xl"></i>
                    </div>
                    <h3 class="text-xs font-bold text-indigo-200 uppercase tracking-wider mb-1">Promedio de Ánimo</h3>
                    <div class="flex items-baseline gap-2">
                        <span class="text-5xl font-black"><%= moodStats.promedio_animo || '0.0' %></span>
                        <span class="text-lg text-indigo-300">/ 5</span>
                    </div>
                    <div class="mt-4 text-sm text-indigo-100 bg-white/10 rounded-lg p-2 inline-block">
                        <i class="fas fa-history mr-1"></i> Basado en <%= moodStats.total_registros %> registros
                    </div>
                </div>

                <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden flex flex-col h-[400px]">
                    <div class="p-5 border-b border-slate-100 bg-slate-50/50 flex justify-between items-center">
                        <h3 class="font-bold text-slate-800 flex items-center gap-2">
                            <i class="fas fa-folder-open text-indigo-500"></i> Documentos
                        </h3>
                        <span class="text-xs font-bold bg-white border border-slate-200 px-2 py-1 rounded-md text-slate-500"><%= reports ? reports.length : 0 %></span>
                    </div>
                    
                    <div class="flex-1 overflow-y-auto p-4 space-y-2">
                        <% if (reports && reports.length > 0) { %>
                            <% reports.forEach(r => { %>
                                <div onclick="openReportModal('<%= r.tipo_reporte %>', '<%= new Date(r.fecha_generacion).toLocaleDateString() %>', `<%= r.resumen_evolucion %>`)" 
                                     class="group flex items-center justify-between p-3 rounded-xl border border-slate-100 hover:border-indigo-200 hover:bg-indigo-50 transition-all cursor-pointer">
                                    <div class="flex items-center gap-3">
                                        <div class="bg-indigo-100 text-indigo-600 w-10 h-10 rounded-lg flex items-center justify-center group-hover:bg-indigo-600 group-hover:text-white transition-colors">
                                            <i class="far fa-file-alt"></i>
                                        </div>
                                        <div>
                                            <p class="text-sm font-bold text-slate-700 group-hover:text-indigo-700"><%= r.tipo_reporte %></p>
                                            <p class="text-[10px] text-slate-400 group-hover:text-indigo-400"><%= new Date(r.fecha_generacion).toLocaleDateString() %></p>
                                        </div>
                                    </div>
                                    <i class="fas fa-chevron-right text-slate-300 text-xs group-hover:text-indigo-400"></i>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="flex flex-col items-center justify-center h-full text-slate-300">
                                <i class="far fa-folder-open text-4xl mb-2 opacity-50"></i>
                                <p class="text-sm">Sin documentos</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="lg:col-span-2 bg-white rounded-2xl shadow-sm border border-slate-200 min-h-[600px] flex flex-col animate-fade-in" style="animation-delay: 0.2s">
                
                <div class="flex border-b border-slate-100">
                    <button onclick="switchTab('timeline')" id="tab-timeline" class="flex-1 py-4 text-sm font-bold transition-all tab-active">
                        <i class="fas fa-stream mr-2"></i> Línea de Tiempo
                    </button>
                    <button onclick="switchTab('evolution')" id="tab-evolution" class="flex-1 py-4 text-sm font-bold transition-all tab-inactive hover:bg-slate-50 text-slate-500">
                        <i class="fas fa-chart-line mr-2"></i> Gráficas de Evolución
                    </button>
                </div>

                <div id="view-timeline" class="p-6 flex-1 overflow-y-auto">
                    <% if (sessions && sessions.length > 0) { %>
                        <div class="relative border-l-2 border-slate-200 ml-4 space-y-8 pl-8 py-2">
                            <% sessions.forEach(session => { %>
                                <div class="relative group">
                                    <span class="absolute -left-[41px] top-0 h-5 w-5 rounded-full border-4 border-white shadow-sm z-10 
                                        <%= session.estado === 'Completada' ? 'bg-emerald-500' : 'bg-slate-300' %>"></span>
                                    
                                    <div class="flex items-center mb-2 gap-3">
                                        <span class="text-xs font-bold text-slate-500 bg-slate-100 px-2 py-1 rounded-md">
                                            <%= new Date(session.fecha_hora_inicio).toLocaleDateString('es-ES', { weekday: 'short', day: 'numeric', month: 'short' }) %>
                                        </span>
                                        <span class="text-[10px] font-black uppercase tracking-wider text-indigo-500"><%= session.modalidad %></span>
                                    </div>

                                    <div class="bg-white rounded-xl border border-slate-200 p-5 shadow-sm hover:shadow-md transition-all hover:border-indigo-200 group-hover:bg-slate-50/50">
                                        <div class="flex justify-between items-start mb-3">
                                            <h4 class="font-bold text-slate-800 flex items-center gap-2">
                                                <i class="fas fa-notes-medical text-slate-400"></i> Nota Clínica
                                            </h4>
                                            <button onclick="openSOAPModal('<%= session.id_cita %>', `<%= session.notas_terapeuta %>`)" class="text-slate-400 hover:text-indigo-600 transition-colors no-print p-2 rounded-full hover:bg-white hover:shadow-sm" title="Editar Nota SOAP">
                                                <i class="fas fa-pencil-alt"></i>
                                            </button>
                                        </div>
                                        
                                        <div class="text-sm text-slate-600 leading-relaxed whitespace-pre-line font-mono bg-slate-50 p-3 rounded-lg border border-slate-100">
                                            <%= session.notas_terapeuta || 'Sin notas registradas para esta sesión.' %>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="flex flex-col items-center justify-center h-full text-slate-400 py-12">
                            <div class="w-20 h-20 bg-slate-50 rounded-full flex items-center justify-center mb-4 text-3xl text-slate-300">
                                <i class="far fa-calendar-times"></i>
                            </div>
                            <h3 class="font-bold text-slate-600">Historial Vacío</h3>
                            <p class="text-sm text-slate-400 max-w-xs text-center mt-1">Este paciente aún no tiene sesiones registradas en el sistema.</p>
                        </div>
                    <% } %>
                </div>

                <div id="view-evolution" class="p-6 hidden space-y-8">
                    <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 relative">
                        <h3 class="font-bold text-slate-800 mb-6 flex items-center gap-2">
                            <span class="w-1 h-6 bg-indigo-500 rounded-full"></span> Evolución del Ánimo
                        </h3>
                        <div class="h-72 w-full relative">
                            <% if (!checkins || checkins.length === 0) { %>
                                <div class="absolute inset-0 flex flex-col items-center justify-center bg-white/80 z-10 backdrop-blur-sm">
                                    <p class="text-slate-400 font-medium">Faltan datos de monitoreo</p>
                                </div>
                            <% } %>
                            <canvas id="chartEmociones"></canvas>
                        </div>
                    </div>

                    <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100">
                        <h3 class="font-bold text-slate-800 mb-6 flex items-center gap-2">
                            <span class="w-1 h-6 bg-emerald-500 rounded-full"></span> Resultados Psicométricos
                        </h3>
                        <div class="h-64 w-full relative">
                            <% if (!tests || tests.length === 0) { %>
                                <div class="absolute inset-0 flex flex-col items-center justify-center bg-white/80 z-10 backdrop-blur-sm">
                                    <p class="text-slate-400 font-medium">No hay tests realizados</p>
                                </div>
                            <% } %>
                            <canvas id="chartTests"></canvas>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div id="soapModal" class="hidden fixed inset-0 bg-slate-900/70 backdrop-blur-sm z-50 flex items-center justify-center p-4 no-print transition-opacity">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-2xl transform transition-all scale-95" id="soapModalContent">
        <div class="px-6 py-4 bg-slate-900 text-white flex justify-between items-center rounded-t-2xl">
            <h3 class="font-bold text-lg"><i class="fas fa-edit mr-2"></i> Nota Clínica (SOAP)</h3>
            <button onclick="closeModal('soapModal')" class="text-slate-400 hover:text-white transition-colors"><i class="fas fa-times text-xl"></i></button>
        </div>
        <form action="/reports/session/update" method="POST" class="p-6 space-y-4">
            <input type="hidden" name="sessionId" id="soapSessionId">
            <input type="hidden" name="patientId" value="<%= patient.id_paciente %>">
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="text-[10px] font-black text-indigo-600 uppercase tracking-wider mb-1 block">S - Subjetivo</label>
                    <textarea id="soapS" rows="3" class="w-full rounded-xl border-slate-200 text-sm bg-slate-50 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all p-3" placeholder="Lo que el paciente reporta..."></textarea>
                </div>
                <div>
                    <label class="text-[10px] font-black text-indigo-600 uppercase tracking-wider mb-1 block">O - Objetivo</label>
                    <textarea id="soapO" rows="3" class="w-full rounded-xl border-slate-200 text-sm bg-slate-50 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all p-3" placeholder="Observaciones clínicas..."></textarea>
                </div>
                <div>
                    <label class="text-[10px] font-black text-indigo-600 uppercase tracking-wider mb-1 block">A - Análisis</label>
                    <textarea id="soapA" rows="3" class="w-full rounded-xl border-slate-200 text-sm bg-slate-50 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all p-3" placeholder="Diagnóstico/Evaluación..."></textarea>
                </div>
                <div>
                    <label class="text-[10px] font-black text-indigo-600 uppercase tracking-wider mb-1 block">P - Plan</label>
                    <textarea id="soapP" rows="3" class="w-full rounded-xl border-slate-200 text-sm bg-slate-50 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all p-3" placeholder="Tratamiento/Tareas..."></textarea>
                </div>
            </div>
            <input type="hidden" name="notas" id="finalNotes">
            <div class="flex justify-end pt-4 border-t border-slate-100">
                <button type="button" onclick="closeModal('soapModal')" class="mr-3 px-4 py-2 text-sm font-bold text-slate-500 hover:text-slate-800 transition-colors">Cancelar</button>
                <button type="submit" onclick="combineSOAP()" class="bg-indigo-600 text-white px-6 py-2 rounded-xl font-bold hover:bg-indigo-700 shadow-lg shadow-indigo-200 transition-all transform active:scale-95">Guardar Cambios</button>
            </div>
        </form>
    </div>
</div>

<div id="reportModal" class="hidden fixed inset-0 bg-slate-900/70 backdrop-blur-sm z-50 flex items-center justify-center p-4 no-print">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-lg p-8 relative">
        <button onclick="closeModal('reportModal')" class="absolute top-4 right-4 text-slate-300 hover:text-slate-600"><i class="fas fa-times"></i></button>
        
        <div class="mb-6">
            <span class="text-[10px] font-bold bg-indigo-50 text-indigo-600 px-2 py-1 rounded uppercase tracking-wider" id="repDate">FECHA</span>
            <h3 class="text-2xl font-black text-slate-900 mt-2" id="repTitle">TÍTULO</h3>
        </div>
        
        <div class="bg-slate-50 p-6 rounded-2xl border border-slate-100 text-sm text-slate-600 leading-relaxed max-h-80 overflow-y-auto shadow-inner" id="repContent">
            CONTENIDO
        </div>
        
        <div class="mt-6 flex justify-end">
            <button onclick="closeModal('reportModal')" class="bg-slate-900 text-white px-6 py-2.5 rounded-xl font-bold hover:bg-slate-800 transition-colors">Entendido</button>
        </div>
    </div>
</div>

<script>
    // --- 1. Lógica de Pestañas ---
    function switchTab(tabName) {
        // Ocultar todo
        document.getElementById('view-timeline').classList.add('hidden');
        document.getElementById('view-evolution').classList.add('hidden');
        
        // Desactivar estilos tabs
        document.getElementById('tab-timeline').className = 'tab-inactive pb-3 px-1 text-sm transition-colors cursor-pointer';
        document.getElementById('tab-evolution').className = 'tab-inactive pb-3 px-1 text-sm transition-colors cursor-pointer';

        // Activar seleccionado
        document.getElementById('view-' + tabName).classList.remove('hidden');
        document.getElementById('tab-' + tabName).className = 'tab-active pb-3 px-1 text-sm transition-colors cursor-pointer border-b-2 border-indigo-600 text-indigo-600 font-bold';
    }

    // --- 2. Lógica SOAP ---
    function openSOAPModal(sessionId, currentNotes) {
        document.getElementById('soapSessionId').value = sessionId;
        
        // Intentar parsear notas existentes
        const sMatch = currentNotes.match(/S:\s*(.*?)(?=\nO:|$)/s);
        const oMatch = currentNotes.match(/O:\s*(.*?)(?=\nA:|$)/s);
        const aMatch = currentNotes.match(/A:\s*(.*?)(?=\nP:|$)/s);
        const pMatch = currentNotes.match(/P:\s*(.*)/s);

        document.getElementById('soapS').value = sMatch ? sMatch[1].trim() : (currentNotes.includes('S:') ? '' : currentNotes);
        document.getElementById('soapO').value = oMatch ? oMatch[1].trim() : '';
        document.getElementById('soapA').value = aMatch ? aMatch[1].trim() : '';
        document.getElementById('soapP').value = pMatch ? pMatch[1].trim() : '';

        document.getElementById('soapModal').classList.remove('hidden');
    }

    function combineSOAP() {
        const s = document.getElementById('soapS').value;
        const o = document.getElementById('soapO').value;
        const a = document.getElementById('soapA').value;
        const p = document.getElementById('soapP').value;
        
        const final = `S: ${s}\nO: ${o}\nA: ${a}\nP: ${p}`;
        document.getElementById('finalNotes').value = final;
    }

    // --- 3. Modales Genéricos ---
    function openReportModal(type, date, content) {
        document.getElementById('repTitle').innerText = 'Reporte ' + type;
        document.getElementById('repDate').innerText = 'Generado el: ' + date;
        document.getElementById('repContent').innerText = content;
        document.getElementById('reportModal').classList.remove('hidden');
    }

    function closeModal(id) {
        document.getElementById(id).classList.add('hidden');
    }

    // --- 4. Gráficas con Chart.js ---
    document.addEventListener('DOMContentLoaded', function() {
        // Datos inyectados desde el backend (graphData)
        const rawCheckins = '<%- JSON.stringify(graphData?.checkins || []) %>';
        const rawTests = '<%- JSON.stringify(graphData?.tests || []) %>';
        
        const checkins = JSON.parse(rawCheckins);
        const tests = JSON.parse(rawTests);

        // Gráfico 1: Emociones
        const ctxEmo = document.getElementById('chartEmociones');
        if (ctxEmo && checkins.length > 0) {
            new Chart(ctxEmo, {
                type: 'line',
                data: {
                    labels: checkins.map(c => new Date(c.fecha_hora).toLocaleDateString()),
                    datasets: [{
                        label: 'Nivel de Ánimo (1-5)',
                        data: checkins.map(c => c.valencia),
                        borderColor: '#4f46e5',
                        backgroundColor: 'rgba(79, 70, 229, 0.1)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: { responsive: true, maintainAspectRatio: false, scales: { y: { min: 1, max: 5 } } }
            });
        }

        // Gráfico 2: Tests
        const ctxTests = document.getElementById('chartTests');
        if (ctxTests && tests.length > 0) {
            new Chart(ctxTests, {
                type: 'bar',
                data: {
                    labels: tests.map(t => `${t.tipo_test} (${new Date(t.fecha_realizacion).toLocaleDateString()})`),
                    datasets: [{
                        label: 'Puntaje',
                        data: tests.map(t => t.puntaje_total),
                        backgroundColor: '#10b981',
                        borderRadius: 6
                    }]
                },
                options: { responsive: true, maintainAspectRatio: false }
            });
        }
    });
</script>

