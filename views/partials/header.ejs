<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'MindCare' %> - MindCare</title>
    
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        body { font-family: 'Inter', sans-serif; }
        
        /* Gradiente Profesional de MindCare */
        .brand-gradient {
            background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%); /* Indigo a Purple */
        }
        
        /* Animaciones */
        .dropdown-enter { transform: scale(0.95); opacity: 0; }
        .dropdown-enter-active { transform: scale(1); opacity: 1; transition: all 0.1s ease-out; }
    </style>
</head>
<body class="bg-slate-50 text-slate-800 flex flex-col min-h-screen">

    <nav class="brand-gradient shadow-lg sticky top-0 z-50 border-b border-white/10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                
                <div class="flex">
                    <div class="flex-shrink-0 flex items-center">
                        <a href="/" class="flex items-center gap-2 group">
                            <div class="bg-white/20 p-1.5 rounded-lg backdrop-blur-sm group-hover:bg-white/30 transition-all">
                                <i class="fas fa-brain text-white text-xl"></i>
                            </div>
                            <span class="font-bold text-xl tracking-tight text-white drop-shadow-sm">MindCare</span>
                        </a>
                    </div>
                    
                    <% if (locals.user) { %>
                    <div class="hidden md:ml-10 md:flex md:space-x-2 items-center">
                        <a href="/dashboard" class="text-white/90 hover:text-white hover:bg-white/10 px-3 py-2 rounded-lg text-sm font-medium transition-all flex items-center">
                            <i class="fas fa-columns mr-2 opacity-75"></i> Dashboard
                        </a>
                        <a href="/dashboard/communication" class="text-white/90 hover:text-white hover:bg-white/10 px-3 py-2 rounded-lg text-sm font-medium transition-all flex items-center">
                            <i class="fas fa-comments mr-2 opacity-75"></i> Mensajes
                        </a>
                    </div>
                    <% } %>
                </div>

                <div class="flex items-center gap-3">
                    
                    <% if (locals.user) { %>
                        <div class="relative">
                            <button id="btn-notif" onclick="toggleDropdown('dropdown-notif')" class="relative p-2 text-white/80 hover:text-white hover:bg-white/10 rounded-full transition-all focus:outline-none">
                                <i class="fas fa-bell text-xl"></i>
                                <span class="absolute top-1.5 right-2 flex h-2.5 w-2.5">
                                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-rose-400 opacity-75"></span>
                                  <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-rose-500 border-2 border-white"></span>
                                </span>
                            </button>
                            
                            <div id="dropdown-notif" class="hidden absolute right-0 mt-3 w-80 bg-white rounded-xl shadow-2xl ring-1 ring-black ring-opacity-5 focus:outline-none transform origin-top-right transition-all z-50 overflow-hidden text-gray-800">
                                <div class="px-4 py-3 border-b border-slate-100 bg-slate-50 flex justify-between items-center">
                                    <p class="text-sm font-bold text-slate-700">Notificaciones</p>
                                    <span class="bg-purple-100 text-purple-700 text-xs px-2 py-0.5 rounded-full font-bold">2</span>
                                </div>
                                <div class="max-h-64 overflow-y-auto">
                                    <a href="#" class="block px-4 py-3 hover:bg-slate-50 border-b border-slate-100 transition-colors">
                                        <div class="flex items-start">
                                            <div class="flex-shrink-0 text-purple-500 mt-0.5"><i class="fas fa-info-circle"></i></div>
                                            <div class="ml-3">
                                                <p class="text-sm font-medium text-slate-800">Sistema Activo</p>
                                                <p class="text-xs text-slate-500 mt-1">Bienvenido a tu panel de control.</p>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <div class="bg-slate-50 px-4 py-2 text-center">
                                    <a href="#" class="text-xs font-bold text-purple-600 hover:text-purple-800">Ver todas</a>
                                </div>
                            </div>
                        </div>

                        <div class="relative ml-2">
                            <button id="btn-user" onclick="toggleDropdown('dropdown-user')" class="flex items-center gap-3 pl-1 pr-3 py-1 rounded-full bg-black/10 hover:bg-black/20 text-white transition-all focus:outline-none border border-white/10">
                                <div class="h-8 w-8 rounded-full bg-white text-purple-600 flex items-center justify-center font-bold text-sm shadow-sm">
                                    <%= user.nombre.charAt(0).toUpperCase() %>
                                </div>
                                <span class="hidden md:block text-sm font-medium max-w-[100px] truncate"><%= user.nombre %></span>
                                <i class="fas fa-chevron-down text-xs opacity-70 transition-transform duration-200" id="arrow-user"></i>
                            </button>

                            <div id="dropdown-user" class="hidden absolute right-0 mt-3 w-60 bg-white rounded-xl shadow-2xl ring-1 ring-black ring-opacity-5 focus:outline-none transform origin-top-right transition-all z-50 overflow-hidden text-gray-800">
                                <div class="px-5 py-4 border-b border-slate-100 bg-slate-50">
                                    <p class="text-sm font-bold text-slate-800"><%= user.nombre %> <%= user.apellido %></p>
                                    <p class="text-xs text-slate-500 truncate mb-2"><%= user.email %></p>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-purple-100 text-purple-700">
                                        <%= user.nombre_rol || 'Usuario' %>
                                    </span>
                                </div>
                                
                                <div class="py-1">
                                    <a href="/users/profile" class="flex items-center px-5 py-2.5 text-sm text-slate-700 hover:bg-purple-50 hover:text-purple-700 transition-colors">
                                        <i class="fas fa-user-circle w-5 mr-2 text-slate-400"></i> Mi Perfil
                                    </a>
                                    <a href="#" class="flex items-center px-5 py-2.5 text-sm text-slate-700 hover:bg-purple-50 hover:text-purple-700 transition-colors">
                                        <i class="fas fa-cog w-5 mr-2 text-slate-400"></i> Configuración
                                    </a>
                                </div>
                                
                                <div class="border-t border-slate-100 py-1">
                                    <button onclick="window.location.href='/auth/logout'" class="w-full text-left flex items-center px-5 py-3 text-sm text-rose-600 hover:bg-rose-50 font-medium transition-colors">
                                        <i class="fas fa-sign-out-alt w-5 mr-2"></i> Cerrar Sesión
                                    </button>
                                </div>
                            </div>
                        </div>
                    
                    <% } else { %>
                        <div class="flex items-center gap-3">
                            <a href="/auth/login" class="text-white/90 hover:text-white font-medium text-sm px-4 py-2 transition-colors hover:bg-white/10 rounded-lg">
                                Iniciar Sesión
                            </a>
                            <a href="/auth/register" class="bg-white text-purple-700 px-5 py-2.5 rounded-lg font-bold text-sm shadow-md hover:shadow-lg hover:bg-gray-50 transition-all transform hover:-translate-y-0.5">
                                Registrarse <i class="fas fa-arrow-right ml-1 text-xs"></i>
                            </a>
                        </div>
                    <% } %>

                </div>
            </div>
        </div>
    </nav>

    <script>
        function toggleDropdown(id) {
            const dropdown = document.getElementById(id);
            const isHidden = dropdown.classList.contains('hidden');
            
            // Cerrar otros
            document.querySelectorAll('[id^="dropdown-"]').forEach(el => {
                if(el.id !== id) {
                    el.classList.add('hidden');
                    el.classList.remove('dropdown-enter-active');
                }
            });

            if (isHidden) {
                dropdown.classList.remove('hidden');
                setTimeout(() => {
                    dropdown.classList.add('dropdown-enter-active');
                }, 10);
            } else {
                dropdown.classList.remove('dropdown-enter-active');
                dropdown.classList.add('hidden');
            }
        }

        window.addEventListener('click', function(e) {
            const buttons = ['btn-user', 'btn-notif'];
            const dropdowns = ['dropdown-user', 'dropdown-notif'];
            
            if (!buttons.some(id => e.target.closest('#' + id)) && 
                !dropdowns.some(id => e.target.closest('#' + id))) {
                
                document.querySelectorAll('[id^="dropdown-"]').forEach(el => {
                    el.classList.add('hidden');
                    el.classList.remove('dropdown-enter-active');
                });
            }
        });
    </script>

    <main class="flex-grow">