    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                    colors: {
                        brand: {
                            light: '#818cf8', // Indigo 400
                            DEFAULT: '#4f46e5', // Indigo 600
                            dark: '#312e81', // Indigo 900
                            purple: '#7e22ce', // Purple 700
                        }
                    },
                    animation: {
                        'fade-in': 'fadeIn 0.2s ease-out',
                        'slide-down': 'slideDown 0.2s ease-out',
                    },
                    keyframes: {
                        fadeIn: {
                            '0%': { opacity: '0' },
                            '100%': { opacity: '1' },
                        },
                        slideDown: {
                            '0%': { transform: 'translateY(-10px)', opacity: '0' },
                            '100%': { transform: 'translateY(0)', opacity: '1' },
                        }
                    }
                }
            }
        }
    </script>

    <style>
        /* Estilos base para asegurar consistencia */
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc; /* Slate 50 - Evita el fondo blanco puro */
            color: #1e293b; /* Slate 800 - Texto oscuro legible */
        }
        
        /* Scrollbar personalizada sutil */
        ::-webkit-scrollbar {
            width: 8px;
        }
        ::-webkit-scrollbar-track {
            background: #f1f5f9;
        }
        ::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 4px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #94a3b8;
        }

        /* Utilidad para ocultar elementos con transición */
        .dropdown-hidden {
            display: none;
            opacity: 0;
            transform: scale(0.95);
        }
        .dropdown-visible {
            display: block;
            opacity: 1;
            transform: scale(1);
            transition: all 0.15s ease-out;
        }
    </style>
</head>
